<UserControl x:Class="Utility.WPF.Demo.Drawing.PenUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utility.WPF.Demo.Drawing" xmlns:controls="http://schemas.utility.com"
             mc:Ignorable="d" 
             d:Background="White"
             d:DesignHeight="450" d:DesignWidth="800">

    <FrameworkElement.Resources>
        <Pen
        x:Key="ChildConnectionPen"
        Brush="#80808080"
        Thickness="1" />
    </FrameworkElement.Resources>
    <UniformGrid Background="Transparent">
        <controls:SpinnerControl x:Name="Spinner1"  Width="200"></controls:SpinnerControl>
        <controls:SpinnerControl x:Name="Spinner2"  Width="200"></controls:SpinnerControl>
    </UniformGrid>
</UserControl>
