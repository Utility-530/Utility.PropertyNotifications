<UserControl x:Class="Utility.PropertyTrees.WPF.Demo.Views.ViewModelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utility.PropertyTrees.WPF.Demo.Views"
             xmlns:prop="clr-namespace:Utility.PropertyTrees.WPF;assembly=Utility.PropertyTrees.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <UniformGrid Columns="1">
            <prop:PropertyTreeList
                        x:Name="PropertyTree"                        
                        TreeView.SelectedItemChanged="PropertyTree_SelectedItemChanged" />
            <prop:PropertyTreeList x:Name="ViewModelTree" />
        </UniformGrid>
    </Grid>
</UserControl>
