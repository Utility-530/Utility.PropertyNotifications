    <DataTemplate x:Key="StringTemplate">
        <TextBox Text="{Binding Value}"></TextBox>
    </DataTemplate>


    <DataTemplate x:Key="BooleanTemplate">
        <CheckBox IsChecked="{Binding Value}"></CheckBox>
    </DataTemplate>
    
    <DataTemplate x:Key="IntegerTemplate">
        <!--<ui:NumberBox    
                    Value="{Binding Value}"
                    SpinButtonPlacementMode="Compact"
                    SmallChange="1"
                    LargeChange="10" />-->
        <TextBox Text="{Binding Value}"></TextBox>
    </DataTemplate>   
    
    <DataTemplate x:Key="DoubleTemplate">
        <ui:NumberBox  
                    Value="{Binding Value}"             
                    SmallChange="0.1"
                    LargeChange="1" />
    </DataTemplate>

    <local:ContentTemplateSelector 
        x:Key="ContentTemplateSelector"
        StringTemplate="{StaticResource StringTemplate}"
        BooleanTemplate="{StaticResource BooleanTemplate}"
        IntegerTemplate="{StaticResource IntegerTemplate}"
        DoubleTemplate="{StaticResource DoubleTemplate}"
        
        />

    <DataTemplate DataType="{x:Type trees:PropertyNode}">
        <HeaderedContentControl Header="{Binding Content, Mode=OneWay}" 
                                Content="{Binding }" 
                                ContentTemplateSelector="{StaticResource ContentTemplateSelector}"/>
    </DataTemplate>
    





    <DataTemplate DataType="{x:Type m:Key}">
        <UniformGrid Height="10" Rows="1">
            <Viewbox>
                <Border AutomationProperties.IsRowHeader="False">
                    <ContentControl
                            ToolTip="{Binding Guid}"
                            Content="{Binding Guid, Converter={x:Static conv:GravatarConverter.Instance}}"></ContentControl>
                </Border>
            </Viewbox>
            <TextBlock Text="{Binding Name}" FontSize="8" ></TextBlock>
            <TextBlock Text="{Binding Type.Name}" FontSize="8" ></TextBlock>
        </UniformGrid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type infra:Order}">
        <Viewbox Margin="8,8,8,8">
            <FrameworkElement.Resources>
                <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
                    <Setter Property="FontSize" Value="8"></Setter>
                </Style>
            </FrameworkElement.Resources>
            <st:AutoGrid Columns="400,50,50,*,*,*"  >

                <ContentControl Content="{Binding Key}"></ContentControl>

                <TextBlock Text="{Binding Access}" FontSize="8"  HorizontalAlignment="Center" />

                <UniformGrid Columns="1">
                    <ProgressBar  Maximum="100" Value="{Binding Progress}"></ProgressBar>
                    <TextBlock Text="{Binding Progress}" HorizontalAlignment="Center"  FontSize="8"></TextBlock>
                </UniformGrid>

                <TextBlock Text="{Binding Value}" FontSize="8" ></TextBlock>

                <TextBlock Text="{Binding Exception.Message}" FontSize="8" ></TextBlock>

            </st:AutoGrid>
        </Viewbox>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:HistoryViewModel}">
        <st:AutoGrid Rows="50,30,*" Columns="*" x:Name="Top">

            <btn:StepButtons x:Name="StepButtons" Enabled="{Binding Enabled, Mode=OneWay}" Command="{Binding Command, Mode=OneTime}" ></btn:StepButtons>

            <UniformGrid  Grid.Row="1" Rows="1">
                <UniformGrid.Background>
                    <SolidColorBrush Opacity="0.2" Color="#FF001B48"></SolidColorBrush>
                </UniformGrid.Background>

                <TextBlock Text="{Binding ElementName=Past, Path=Items.Count}" HorizontalAlignment="Center"></TextBlock>
                <Ellipse Height="40" Width="40"></Ellipse>
                <TextBlock Text="{Binding ElementName=Present, Path=Items.Count}" HorizontalAlignment="Center"></TextBlock>
                <Ellipse Height="40" Width="40"></Ellipse>
                <TextBlock Text="{Binding ElementName=Future, Path=Items.Count}" HorizontalAlignment="Center"></TextBlock>
            </UniformGrid>

            <Grid x:Name="HistoryPanel" Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="6*"></RowDefinition>
                </Grid.RowDefinitions>

                <ScrollViewer>
                    <ItemsControl x:Name="Past"  ItemsSource="{Binding Past}">
                        <ItemsControl.Background>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0" Opacity="0.2">
                                <GradientStop Color="#FF001B48" Offset="0.25" />
                                <GradientStop Color="White" Offset="0.99" />
                            </LinearGradientBrush>
                        </ItemsControl.Background>
                    </ItemsControl>
                </ScrollViewer>
                <Border  Grid.Row="1" BorderBrush="Gray" BorderThickness="2">
                    <Viewbox>
                        <ItemsControl x:Name="Present" ItemsSource="{Binding Present}">
                            <ItemsControl.Background>
                                <SolidColorBrush Color="Transparent"  Opacity="1" />
                            </ItemsControl.Background>
                        </ItemsControl>
                    </Viewbox>
                </Border>

                <ScrollViewer Grid.Row="2">
                    <ItemsControl x:Name="Future"  ItemsSource="{Binding Future}">
                        <ItemsControl.Background>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0" Opacity="0.2">
                                <GradientStop Color="White" Offset="0.01" />
                                <GradientStop Color="#FF4A0000" Offset="0.75" />
                            </LinearGradientBrush>
                        </ItemsControl.Background>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </st:AutoGrid>
    </DataTemplate>

</ResourceDictionary>