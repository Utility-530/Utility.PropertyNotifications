            <Setter.Value>
                <DataTemplate>
                    <TextBlock
                            Text="{Binding}"
                            Style="{DynamicResource BaseTextBlockStyle}"
                            Margin="0,0,0,16" />
                </DataTemplate>
            </Setter.Value>
        </Setter>-->
    <!--
