<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.modernwpf.com/2019"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:trees="clr-namespace:Utility.PropertyTrees;assembly=Utility.PropertyTrees"                    
                    xmlns:nodes="clr-namespace:Utility.Nodes;assembly=Utility.Nodes"                    
                    xmlns:local="clr-namespace:Utility.PropertyTrees.WPF.Demo"    
                    xmlns:m="clr-namespace:Utility.Models;assembly=Utility.Models"
                    xmlns:infra="clr-namespace:Utility.Infrastructure;assembly=Utility.Infrastructure"
                    xmlns:views="clr-namespace:Utility.PropertyTrees.WPF.Demo.Views"
                    xmlns:conv="http://schemas.utility.com/converters"
                    xmlns:btn="http://schemas.utility.com/buttons"
                    xmlns:st="http://schemas.spicytaco.io/" 
                    xmlns:uni="UniversalConverter"
                    xmlns:view="http://schemas.utility.com">

    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Utility.PropertyTrees.WPF.Demo;component/Themes/Styles.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <uni:UniversalConverter x:Key="UniversalConverter"></uni:UniversalConverter>

