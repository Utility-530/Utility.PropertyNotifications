<Window x:Class="Utility.Networks.WPF.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utility.Networks.WPF.Server"
        xmlns:local1="clr-namespace:Utility.Networks.WPF.Server.ViewModels"
        xmlns:objects="http://schemas.utility.com/objects" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        xmlns:conv="http://schemas.utility.com/converters" xmlns:services="clr-namespace:ChatterServer.Services"
        Title="MainWindow" Height="450" Width="800">
    <FrameworkElement.Resources>
    </FrameworkElement.Resources>
    <Window.DataContext>
        <local1:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>

            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0"
                    Margin="5"
                    Background="WhiteSmoke">
            <Label>Port</Label>
            <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="{Binding Status}" ContentStringFormat="Status: {0}"/>
            <Button Margin="5" Command="{Binding RunCommand}">Run</Button>
            <Button Margin="5,0" Command="{Binding StopCommand}">Stop</Button>
        </StackPanel>


        <Grid  Grid.Column="1" Grid.Row="0">
            <Grid.DataContext>
                <services:ServerService></services:ServerService>
            </Grid.DataContext>
            <ContentControl Content="{Binding Server}"></ContentControl>
        </Grid>
    </Grid>
</Window>
