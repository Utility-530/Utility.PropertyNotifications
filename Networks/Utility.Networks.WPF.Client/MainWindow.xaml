<Window x:Class="Utility.Networks.WPF.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utility.Networks.WPF.Client" 
        xmlns:conv="http://schemas.utility.com/converters"
        xmlns:system="clr-namespace:System;assembly=netstandard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
        <conv:InverseBooleanConverter x:Key="InverseConverter"/>
        <conv:BooleanToVisibilityConverter Invert="True"  x:Key="InverseBooleanToVisibilityConverter"/>

        <LinearGradientBrush x:Key="FlashBrush" Opacity="0.6">
            <GradientStop Color="White" x:Name="Stop1" Offset="0.25" />
            <GradientStop Color="White" x:Name="Stop2" Offset="0.5" />
            <GradientStop Color="White" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Resources>
    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0"
                    Grid.ColumnSpan="1" Grid.RowSpan="2"
                    Background="WhiteSmoke">
            <Label>Username</Label>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                     IsEnabled="{Binding ChatRoom.IsConnected, Converter={StaticResource InverseConverter}}"/>
            <Label>IP Address</Label>
            <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                     IsEnabled="{Binding ChatRoom.IsConnected, Converter={StaticResource InverseConverter}}"/>
            <Label>Port</Label>
            <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" 
                     IsEnabled="{Binding ChatRoom.IsConnected, Converter={StaticResource InverseConverter}}"/>
            <Button Command="{Binding ConnectCommand}">Connect</Button>
            <Button Command="{Binding DisconnectCommand}">Disconnect</Button>
            <Label Content="{Binding ChatRoom.IsConnected}" ContentStringFormat="IsConnected: {0}"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="3"
                    Grid.ColumnSpan="1" Grid.RowSpan="1"
                    Background="WhiteSmoke">
            <Label>Username Color</Label>
            <ComboBox SelectedItem="{Binding ColorCode}" SelectedIndex="0">
                <ComboBox.Items>
                    <system:String>Black</system:String>
                    <system:String>Red</system:String>
                    <system:String>Blue</system:String>
                    <system:String>Green</system:String>
                    <system:String>Orange</system:String>
                </ComboBox.Items>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Label Foreground="{Binding}" Content="{Binding}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <ContentControl Grid.Column="1" Grid.Row="0"
                   Grid.ColumnSpan="2" Grid.RowSpan="2">
            <ContentControl.Content>
                <ListView x:Name="chatList" ItemsSource="{Binding Messages}" Margin="5"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                        <ContentPresenter x:Name="contentPresenter" Content="{TemplateBinding Content}"
                                      ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}" OpacityMask="{x:Null}"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate >
                            <Border BorderBrush="WhiteSmoke" BorderThickness="0,0,0,1">
                                <DockPanel HorizontalAlignment="Stretch">
                                    <DockPanel>
                                        <TextBlock Padding="2" Text="{Binding Name, StringFormat={}{0}:}" 
                                       Foreground="{Binding Color}" 
                                       FontWeight="Bold" DockPanel.Dock="Left"/>
                                        <TextBlock DockPanel.Dock="Left" Padding="2" Text="{Binding Content}" TextWrapping="Wrap"/>
                                    </DockPanel>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ContentControl.Content>
        </ContentControl>

        <DockPanel Grid.Column="1" Grid.Row="3"
                   Grid.ColumnSpan="2" Grid.RowSpan="1">
            <TextBox Margin="5" Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" 
                     AcceptsReturn="False" KeyDown="MessageBox_KeyDown"
                     TextWrapping="Wrap"/>
        </DockPanel>

        <DockPanel Grid.Column="3" Grid.Row="0"
                   Grid.ColumnSpan="1" Grid.RowSpan="2">
            <Label DockPanel.Dock="Top">Users Online</Label>
            <ListView ItemsSource="{Binding Users}" DockPanel.Dock="Bottom" Margin="5">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Fill="#FF00FF51" Margin="2"/>
                            <TextBlock Padding="2" Text="{Binding Name, StringFormat={}{0}:}" 
                                       Foreground="{Binding Color}" 
                                       FontWeight="Bold" DockPanel.Dock="Left"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>

        <StackPanel Grid.Column="3" Grid.Row="3"
                   Grid.ColumnSpan="1" Grid.RowSpan="1"
                    VerticalAlignment="Bottom">
            <Button Margin="5" Command="{Binding SendCommand}">Send</Button>
        </StackPanel>

        <DockPanel Grid.Column="1" Grid.Row="0"
                    Grid.ColumnSpan="3" Grid.RowSpan="3"
                   Margin="5"
                    Background="#FFDEDEDE" Visibility="{Binding ChatRoom.IsConnected, Converter={StaticResource InverseBooleanToVisibilityConverter}}">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="16" Foreground="#FF212121">
                    Find a chat room to connect to!
                </Label>
            </StackPanel>
        </DockPanel>


        <DockPanel Grid.Column="4" Grid.Row="0"
                   Grid.RowSpan="3"
                   Margin="5"
                    Background="#FFDEDEDE">

            <Grid DataContext="{Binding ChatRoom}" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel>
                    <Label DockPanel.Dock="Top">Last Server response</Label>
                    <TextBlock Text="{Binding TimeSinceLastPong}" Margin="8,0"></TextBlock>
                    <Label DockPanel.Dock="Top">Average Latency (s)</Label>
                    <TextBlock Text="{Binding Latency, StringFormat=\{0:ss\\:ffffff\}}" Margin="8,0"></TextBlock>
                </StackPanel>

                <ListBox Grid.Row="1"  ItemsSource="{Binding Sent}"  Margin="5" ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" Margin="2"/>
                                <!--<Ellipse Fill="Red" Height="20" Width="20"></Ellipse>-->
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <ListBox ItemsSource="{Binding Received}" Grid.Row="2" Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" Margin="2"/>
                                <!--<Ellipse Fill="Red" Height="20" Width="20"></Ellipse>-->
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>
        </DockPanel>

        <Grid.Resources>
            <!--<Setter Property="Background">
                <Setter.Value>-->
            <RadialGradientBrush x:Key="FlashBrush"  Opacity="0">
                <GradientStop Color="White" x:Name="Stop1" Offset="0.5" />
                <GradientStop Color="#579" x:Name="Stop2" Offset="1" />
                <!--<GradientStop Color="CadetBlue"  Offset="1.0" />-->
                    </RadialGradientBrush>
                <!--</Setter.Value>
            </Setter>-->
        </Grid.Resources>

        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Background" Value="{StaticResource FlashBrush}"></Setter>
              
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsFlashing}" Value="True">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard x:Name="FlashStoryboard">
                                <Storyboard AutoReverse="True">
                                    <DoubleAnimation Storyboard.TargetProperty="Background.Opacity" 
                                       From="0" To="0.3" Duration="0:0:0.3"/>
                                    <!--<ColorAnimation 
                                                   Storyboard.Target="{StaticResource FlashBrush}"
            Storyboard.TargetProperty="GradientStops[0].Color"
                                                To="RoyalBlue"
                                                Duration="0:0:0.5"/>
                                    --><!-- Animate the second stop --><!--
                                    <ColorAnimation 
                        Storyboard.Target="{StaticResource FlashBrush}"
            Storyboard.TargetProperty="GradientStops[1].Color"
                                                To="LimeGreen"
                                                Duration="0:0:0.5"/>-->
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <StopStoryboard BeginStoryboardName="FlashStoryboard"/>
                        </DataTrigger.ExitActions>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>

    </Grid>
</Window>
