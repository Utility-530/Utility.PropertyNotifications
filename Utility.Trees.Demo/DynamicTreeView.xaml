<UserControl x:Class="Utility.Trees.Demo.DynamicTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utility.Trees.Demo"
             xmlns:btns="http://schemas.utility.com/buttons"
             xmlns:tree="clr-namespace:Utility.Trees;assembly=Utility.Trees"
             xmlns:trees="http://schemas.utility.com/trees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <btns:DirectionButtons x:Name="DirectionButtons"  Grid.Row="0" Margins="2"/>
        <btns:EditCollectionButtons x:Name="EditCollectionButtons"   Grid.Row="1" Margins="2"/>
        <btns:PersistenceButtons x:Name="PersistenceButtons"   Grid.Row="2" Margins="2"/>


        <trees:MyTreeView x:Name="TreeView3"   Grid.Row="3" >
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type trees:MyTreeViewItem}">
                    <Setter Property="IsExpanded" Value="True" />
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type tree:Tree}" ItemsSource="{Binding Items}" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ContentControl Content="{Binding Index}"/>

                        <ContentControl Grid.Column="2"  Content="{Binding Data}"/>

                        <ContentControl Grid.Column="4"  Content="{Binding State}">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="Foreground" Value="Black" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding State}" Value="{x:Static tree:State.Current}" >
                                            <Setter Property="Foreground" Value="Cyan" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding State}" Value="{x:Static tree:State.Forward}">
                                            <Setter Property="Foreground" Value="DodgerBlue" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding State}" Value="{x:Static tree:State.Back}">
                                            <Setter Property="Foreground" Value="IndianRed" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding State}" Value="{x:Static tree:State.Up}">
                                            <Setter Property="Foreground" Value="Green" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding State}" Value="{x:Static tree:State.Down}">
                                            <Setter Property="Foreground" Value="Peru" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding State}" Value="{x:Static tree:State.Add}">
                                            <Setter Property="Foreground" Value="Maroon" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding State}" Value="{x:Static tree:State.Remove}">
                                            <Setter Property="Foreground" Value="Tomato" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>

                        <ContentControl Grid.Column="6"  Content="{Binding Data.Key}"/>
                    </Grid>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </trees:MyTreeView>
    </Grid>
</UserControl>
