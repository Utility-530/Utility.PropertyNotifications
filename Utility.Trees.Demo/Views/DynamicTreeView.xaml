            </TreeView.ItemTemplate>
            <trees:TreeListView.Columns>
                <!--Create the first column containing the expand button and the type name.-->
                <GridViewColumn Header="Index" Width="200">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!--The Expander Button (can be used in any column (typically the first one))-->
                                <trees:TreeListViewExpander/>
                                <ContentControl Content="{Binding Index}"/>
                                <!--Display the name of the DataElement-->
                                <!--<TextBlock Text="{Binding Content}"/>-->
                            </StackPanel>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
                <GridViewColumn Header="State" Width="200">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl Grid.Column="4"  Content="{Binding State}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Foreground" Value="Black" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding State}" Value="{x:Static abs:State.Current}" >
                                                <Setter Property="Foreground" Value="Cyan" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="{x:Static abs:State.Forward}">
                                                <Setter Property="Foreground" Value="DodgerBlue" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="{x:Static abs:State.Back}">
                                                <Setter Property="Foreground" Value="IndianRed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="{x:Static abs:State.Up}">
                                                <Setter Property="Foreground" Value="Green" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="{x:Static abs:State.Down}">
                                                <Setter Property="Foreground" Value="Peru" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="{x:Static abs:State.Add}">
                                                <Setter Property="Foreground" Value="Maroon" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="{x:Static abs:State.Remove}">
                                                <Setter Property="Foreground" Value="Tomato" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
                <GridViewColumn Header="Data" julmar:ListViewColumnAutoSizeBehavior.Width="Auto">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding Data}"/>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
            </trees:TreeListView.Columns>
