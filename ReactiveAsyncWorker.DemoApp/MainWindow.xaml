<Window x:Class="DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoApp" xmlns:reactiveui="http://reactiveui.net"
        mc:Ignorable="d"
        Title="MainWindow" >

    <TabControl>
        
        <TabItem Header="TPL">
            <local:TPLUserControl></local:TPLUserControl>
        </TabItem>

        <TabItem Header="Factory">
            <reactiveui:ViewModelViewHost VerticalContentAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch" 
                x:Name="FactoryViewModelViewHost">                 
            </reactiveui:ViewModelViewHost>
        </TabItem>

        <TabItem Header="Background Worker">
            <local:MainUserControl></local:MainUserControl>
        </TabItem>

        <TabItem Header="File Download">
            <local:SecondaryUserControl></local:SecondaryUserControl>
        </TabItem>
        
   

    </TabControl>
    
</Window>