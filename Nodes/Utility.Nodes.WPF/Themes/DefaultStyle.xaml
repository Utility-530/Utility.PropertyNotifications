<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:customtrees="CustomTrees"
                    xmlns:trees="http://schemas.utility.com/trees"
                    xmlns:local="clr-namespace:Utility.Nodes.WPF" 
                    xmlns:conv="http://schemas.utility.com/converters" 
                    xmlns:att="http://schemas.utility.com/attached" 
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
                    xmlns:beh="http://schemas.utility.com/behaviors" 
                    xmlns:controls="http://schemas.utility.com/cboxes" 
                    xmlns:ct="http://schemas.utility.com/trees"                    
                    xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks" 
                    xmlns:res="http://schemas.utility.com/resourcedictionary">
    <ResourceDictionary.MergedDictionaries>
        <res:SharedResourceDictionary Source="/Utility.Nodes.WPF;component/Themes/Shared.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="DefaultStyle" TargetType="{x:Type trees:CustomTreeViewItem}" BasedOn="{StaticResource {x:Type trees:CustomTreeViewItem}}">
        <Setter Property="Header" Value="{Binding Data}"/>
        <Setter Property="ToolTip" Value="{Binding Key}"></Setter>
        <!--<Setter Property="ChildrenSelector" Value="{StaticResource ChildrenSelector}"/>-->
        <Setter Property="NodeItemsSource">
            <Setter.Value>
                <MultiBinding Converter="{StaticResource ChildrenSelectorConverter}">
                    <!-- first binding ensures refresh every time combo-box opened -->
                    <Binding Path="SelectedIndex"  ElementName="SplitButton"/>
                    <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}"/>
                    <Binding Path="NodeModels" RelativeSource="{RelativeSource Mode=Self}"/>
                </MultiBinding>
            </Setter.Value>
        </Setter>
        <Setter Property="EditTemplateSelector">
            <Setter.Value>
                <local:EditTemplateSelector>
                    <local:EditTemplateSelector.AndOrModelTemplate>
                        <DataTemplate>
                            <Ellipse Fill="Red"  Height="20" Width="20"></Ellipse>
                        </DataTemplate>
                    </local:EditTemplateSelector.AndOrModelTemplate>
                    <local:EditTemplateSelector.ResolvableModelTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Name}"></TextBox>
                        </DataTemplate>
                    </local:EditTemplateSelector.ResolvableModelTemplate>
                </local:EditTemplateSelector>
            </Setter.Value>
        </Setter>
        <att:InteractivitySetter Property="att:InteractivityItems.Template">
            <Setter.Value>
                <att:InteractivityTemplate>
                    <att:InteractivityItems>
                        <att:InteractivityItems.Triggers>
                            <i:EventTrigger EventName="Change">
                                <!--<beh:InvokeCommandAction Command="{Binding AddCommand}" EventArgsConverter="{StaticResource AddConverter}"/>-->
                                <beh:InvokeCommandAction Command="{Binding RemoveCommand}" EventArgsConverter="{StaticResource RemoveConverter}"/>
                            </i:EventTrigger>
                        </att:InteractivityItems.Triggers>
                    </att:InteractivityItems>
                </att:InteractivityTemplate>
            </Setter.Value>
        </att:InteractivitySetter>
        <Setter Property="NodeTemplate">
            <Setter.Value>
                <DataTemplate>
                    <ContentControl Content="{Binding Converter={StaticResource TypeNameConverter}}"></ContentControl>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Removed, Converter={StaticResource InverseNullToBooleanConverter}}" Value="True" >
                <Setter Property="IsEnabled" Value="False"></Setter>
                <Setter Property="Height" Value="2"></Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type trees:CustomTreeViewItem}">
                            <Grid Background="LightGray">
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>    
    </Style>
    
</ResourceDictionary>