<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="http://schemas.utility.com/converters"
    xmlns:res="http://schemas.utility.com/resourcedictionary">
    <ResourceDictionary.MergedDictionaries>
        <res:SharedResourceDictionary Source="/Utility.Nodes.WPF;component/Themes/Shared.xaml" />
    </ResourceDictionary.MergedDictionaries>




    <Style x:Key="HeaderedItemsStyle" TargetType="{x:Type TreeViewItem}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TreeViewItem}">
                    <Border
                        x:Name="Bd"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1">

                        <Grid HorizontalAlignment="Stretch">
                            <Grid.Width>
                                <!--  ensures that contentpresenter and itemspresenter are same size are either the next treeviewitem up or the treeview  -->
                                <MultiBinding Converter="{StaticResource Math}" ConverterParameter="Min(x,y)">
                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TreeViewItem}}" />
                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TreeView}}" />
                                </MultiBinding>
                            </Grid.Width>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="2" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <ContentPresenter
                                x:Name="PART_Header"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                ContentSource="Header" />

                            <Rectangle
                                x:Name="Rectangle2"
                                Grid.Row="1"
                                Margin="0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Stroke="DarkGoldenrod"
                                StrokeThickness="2" />


                            <ItemsPresenter x:Name="ItemsHost" Grid.Row="2" />

                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="LightGreen" />
                            <Setter TargetName="Bd" Property="BorderThickness" Value="1" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="LightBlue" />
                            <Setter TargetName="Bd" Property="BorderThickness" Value="2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>



