<Window x:Class="Utility.Nodes.Demo.Directory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utility.Nodes.Demo.Directory" 
        xmlns:sys="clr-namespace:System;assembly=netstandard" 
        xmlns:trees="http://schemas.utility.com/trees"
        xmlns:btns="http://schemas.utility.com/buttons"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:m="clr-namespace:Utility.Models.Trees;assembly=Utility.Models.Trees"
        xmlns:c="http://schemas.utility.com/colours"
        xmlns:styles="clr-namespace:Utility.Nodes.WPF;assembly=Utility.Nodes.WPF"
        xmlns:conv="http://schemas.utility.com/converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/ComboTreeViewItem.xaml"/>
                <!--<ResourceDictionary Source="/Utility.WPF.Demo.Data;component/DataTemplate/Character.xaml" />-->
                <ResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/ComboBoxToggleButton.xaml"/>
                <ResourceDictionary Source="/Utility.WPF.Geometries;component/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>

          




            <sys:Double x:Key="MaxDropDownHeight" >400.0</sys:Double>

            <styles:NewObjectConverter x:Key="NewObjectConverter"/>


            <Style x:Key="ComboExStyle" TargetType="{x:Type trees:CustomTreeViewItem}" BasedOn="{StaticResource ComboTreeViewItem}">
                <Setter Property="Edit" Value="{Binding Data, Converter={StaticResource NewObjectConverter}}"></Setter>
                <Setter Property="ItemsSource" Value="{Binding Children}"></Setter>
                <Setter Property="SelectedItem" Value="{Binding Path=SelectionItem.Data, RelativeSource={RelativeSource Mode=Self}}"/>
            </Style>


            <Style x:Key="DefaultStyle" TargetType="{x:Type trees:CustomTreeViewItem}" BasedOn="{StaticResource {x:Type trees:CustomTreeViewItem}}">
                <!--<Setter Property="Header" Value="{Binding Data}"/>-->
                <Setter Property="ToolTip" Value="{Binding Key}"></Setter>
            
            </Style>


        </ResourceDictionary>
    </FrameworkElement.Resources>


</Window>
