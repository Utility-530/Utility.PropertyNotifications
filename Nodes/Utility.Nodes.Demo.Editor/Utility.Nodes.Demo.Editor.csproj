<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.0</FileVersion>
    <ApplicationIcon>Icons\editor2.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Data\entireframework.min.css" />
    <None Remove="Data\master.css" />
    <None Remove="Data\pico.classless.blue.css" />
    <None Remove="Data\pico.min.css" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Icons\editor2.ico" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="CSS\entireframework.min.css" />
    <EmbeddedResource Include="CSS\master.css">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="CSS\pico.classless.blue.css" />
    <EmbeddedResource Include="CSS\pico.min.css" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Conversions\Utility.Json.Newtonsoft\Utility.Conversions.Json.Newtonsoft.csproj" />
    <ProjectReference Include="..\..\WPF\Utility.WPF.Controls.Objects\Utility.WPF.Controls.Objects.csproj" />
    <ProjectReference Include="..\..\WPF\Utility.WPF.Trees\Utility.WPF.Trees.csproj" />
    <ProjectReference Include="..\Utility.Nodes.Demo.Filters\Utility.Nodes.Demo.Filters.csproj" />   
    <ProjectReference Include="..\Utility.Nodes.WPF\Utility.Nodes.WPF.csproj" />
    <ProjectReference Include="..\Utility.Nodes.Filters\Utility.Nodes.Meta.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ApplicationDefinition Update="App.xaml">
      <SubType>Designer</SubType>
    </ApplicationDefinition>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AngleSharp" Version="1.2.0" />
    <PackageReference Include="AngleSharp.Css" Version="1.0.0-beta.144" />
    <PackageReference Include="AngleSharp.Diffing" Version="1.0.0" />
  </ItemGroup>


</Project>
