<Application x:Class="Utility.Nodes.Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:st="http://schemas.spicytaco.io/" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:conv="http://schemas.utility.com/converters"
             xmlns:infra="clr-namespace:Utility.Nodes.Demo.Infrastructure" 
             xmlns:wpf="clr-namespace:Utility.Nodes.WPF;assembly=Utility.Nodes.WPF"
             xmlns:io="clr-namespace:System.IO;assembly=mscorlib"        
             xmlns:local="clr-namespace:Utility.Nodes.Demo"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources RequestedTheme="Light"  AccentColor="Blue"/>
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>

            <conv:FilenameToIconConverter x:Key="iconConverter" />
            
            <DataTemplate DataType="{x:Type infra:ViewModel}">
                <st:AutoGrid Columns="*,*" Rows="*" Height="24">
                    <materialDesign:PackIcon Kind="{Binding Icon}"/>
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </st:AutoGrid>
            </DataTemplate>

            <DataTemplate DataType="{x:Type io:FileSystemInfo}">
                <Border Height="28"
                            Padding="16 0"
                            Background="#01FFFFFF">
                    <Border.InputBindings>
                        <MouseBinding MouseAction="LeftClick"
                                          Command="{Binding Path=DataContext.SetCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                          CommandParameter="{Binding}" />
                    </Border.InputBindings>
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextTrimming"
                                            Value="CharacterEllipsis" />
                                <Setter Property="Foreground"
                                            Value="#505050" />
                                <Setter Property="VerticalAlignment"
                                            Value="Center" />
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="16" />
                        </Grid.ColumnDefinitions>


                        <Image Grid.Column="0" Width="16" Height="16" Source="{Binding FullName, Converter={StaticResource iconConverter}}" />

                        <TextBlock Grid.Column="2"
                                       Text="{Binding Name}" />

                        <TextBlock Grid.Column="4"
                                       Text="{Binding Attributes}" />
                        <TextBlock Grid.Column="6"
                                       Text="{Binding LastWriteTime}" />
                    </Grid>
                </Border>
            </DataTemplate>

            <HierarchicalDataTemplate x:Key="template" ItemsSource="{Binding Items}">
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                 AncestorType={x:Type TreeViewItem}}, Path=IsSelected}" 
                                                 Value="True">
                                    <Setter Property="StackPanel.Background" Value="LightBlue"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <ContentControl Content="{Binding Data}"  VerticalAlignment="Center">
                    </ContentControl>
                </StackPanel>
            </HierarchicalDataTemplate>

            <local:DataTemplateSelector x:Key="selector" DefaultTemplate="{StaticResource template}"></local:DataTemplateSelector>
            <local:StyleSelector x:Key="styleSelector"></local:StyleSelector>

            <DataTemplate DataType="{x:Type local:DemoRootNode}">
                <TreeView ItemsSource="{Binding Items}" ItemTemplateSelector="{StaticResource selector}" ItemContainerStyleSelector="{StaticResource styleSelector}">
    
                </TreeView>
            </DataTemplate>

       </ResourceDictionary>
    </Application.Resources>
</Application>
