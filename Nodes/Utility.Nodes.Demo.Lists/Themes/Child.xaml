<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Utility.Nodes.Demo.Lists"
                    xmlns:view="http://schemas.utility.com/lists" 
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:t="http://schemas.utility.com/trees" >

    <local:TypeItemsSourceConverter x:Key="TypeItemsSourceConverter"/>
    <local:ModelViewModelConverter x:Key="ModelViewModelConverter"/>

    <DataTemplate DataType="{x:Type local:ChildViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>



            <view:CustomSelector
                            x:Name="CustomSelector"
                            ItemsWidth="300" ItemsHeight="500"
                                         IsGrid="True"
                                         CheckedPropertyName="IsRhPositive"   
                                         ItemsSource="{Binding Data.Value, Converter={StaticResource TypeItemsSourceConverter}}" >
                <!--Edit="{Binding Edit,Mode=TwoWay}">-->
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="FinishEdit">
                        <local:AddItemAction/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </view:CustomSelector>

            <ContentControl Grid.Row="1" Content="{Binding ElementName=CustomSelector, Path=SelectedItem, Converter={StaticResource ModelViewModelConverter} }" >
            </ContentControl>
        </Grid>
    </DataTemplate>
</ResourceDictionary>