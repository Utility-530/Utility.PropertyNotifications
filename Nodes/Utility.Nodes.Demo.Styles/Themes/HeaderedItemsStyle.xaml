<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="http://schemas.utility.com/converters" 
                    xmlns:res="http://schemas.utility.com/resourcedictionary">
    <ResourceDictionary.MergedDictionaries>
        <res:SharedResourceDictionary Source="/Utility.Nodes.WPF.Styles;component/Themes/Shared.xaml"/>
    </ResourceDictionary.MergedDictionaries>




    <Style TargetType="{x:Type TreeViewItem}" x:Key="HeaderedItemsStyle" >

        <Setter Property="Template" >
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TreeViewItem}">
                    <Border x:Name="Bd"      
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                   BorderThickness="1"
                    Padding="{TemplateBinding Padding}">
             
                        <Grid HorizontalAlignment="Stretch" >
                            <Grid.Width>
                                <!-- ensures that contentpresenter and itemspresenter are same size are either the next treeviewitem up or the treeview -->
                                <MultiBinding ConverterParameter="Min(x,y)" Converter="{StaticResource Math}">
                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TreeViewItem}}" />
                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TreeView}}"  />
                                </MultiBinding>
                            </Grid.Width>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="2"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <ContentPresenter x:Name="PART_Header"
                              ContentSource="Header"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>

                            <Rectangle 
                                       Stroke="DarkGoldenrod" 
                                 
                                       x:Name="Rectangle2"
                                       Grid.Row="1"
                                       StrokeThickness="2"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"  Margin="0,0"/>


                            <ItemsPresenter x:Name="ItemsHost" Grid.Row="2"/>

                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True" >
                            <Setter Property="BorderBrush" Value="LightGreen"  TargetName="Bd"/>
                            <Setter Property="BorderThickness" Value="1"  TargetName="Bd"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="BorderBrush" Value="LightBlue"  TargetName="Bd"/>
                            <Setter Property="BorderThickness" Value="2"  TargetName="Bd"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>



