<Window x:Class="Utility.Trees.Demo.Filters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utility.Trees.Demo.Filters"
        xmlns:tree="http://schemas.utility.com/trees"
        xmlns:cbx="http://schemas.utility.com/cboxes"
        xmlns:bc="http://schemas.utility.com/Breadcrumbs" 
        xmlns:res="http://schemas.utility.com/resourcedictionary" 
        xmlns:att="http://schemas.utility.com/attached" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:mt="clr-namespace:Utility.Models.Trees;assembly=Utility.Models.Trees"
        xmlns:infrastructure="clr-namespace:Utility.Trees.Demo.Filters.Infrastructure"
        xmlns:m="clr-namespace:Utility.Models;assembly=Utility.Models"
        xmlns:b="http://schemas.utility.com/behaviors"
        xmlns:conv="http://schemas.utility.com/converters" xmlns:ex="http://schemas.utility.com/external"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <FrameworkElement.DataContext>
        <infrastructure:MainViewModel/>
    </FrameworkElement.DataContext>

    <FrameworkElement.Resources>
        <ResourceDictionary>
            <!--<Style TargetType="{x:Type TreeViewItem}">
                <Setter Property="IsExpanded" Value="True"></Setter>
                <Setter Property="HeaderTemplateSelector" Value="{x:Static local:DataTemplateSelector.Instance}"></Setter>
                <Setter Property="ItemContainerStyleSelector" Value="{x:Static local:StyleSelector.Instance}"></Setter>
            </Style>-->

            <DataTemplate DataType="{x:Type m:CollectionRootModel}">
                <TextBlock Text="{Binding Name}"/>
            </DataTemplate>


        </ResourceDictionary>
    </FrameworkElement.Resources>

    <DockPanel>
        <!--<WrapPanel DockPanel.Dock="Top">
            <Button Width="100" Margin="2" Command="{Binding SaveCommand}" >save</Button>

        </WrapPanel>-->

        <Grid>
            <Grid.ColumnDefinitions>
                <!--<ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>-->
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--<GridSplitter Grid.Column="2" Width="4" HorizontalAlignment="Center" Background="Firebrick"/>-->

            <Grid Grid.Column="2" >
                <FrameworkElement.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <res:SharedResourceDictionary Source="/Utility.WPF.Controls.ComboBoxes;component/Themes/CustomComboTreeViewItemStyle.xaml"/>
                            <res:SharedResourceDictionary Source="/Utility.Nodes.WPF.Styles;component/Themes/Generic.xaml"/>
                            <res:SharedResourceDictionary Source="/Utility.Nodes.WPF.Styles;component/Themes/Templates.xaml"/>
                            <ResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/CustomTreeViewItem.xaml"/>
                            <ResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/SelectedHorizontalStyle.xaml"/>
                            <ResourceDictionary Source="/Utility.WPF.Controls.Breadcrumbs;component/Themes/Generic.xaml"/>
                        </ResourceDictionary.MergedDictionaries>


                        <Style x:Key="Style" TargetType="{x:Type tree:CustomTreeViewItem}" BasedOn="{StaticResource SelectedHorizontalStyle}">
                            <att:InteractivitySetter Property="att:InteractivityItems.Template">
                                <Setter.Value>
                                    <att:InteractivityTemplate>
                                        <att:InteractivityItems>
                                            <att:InteractivityItems.Triggers>
                                                <i:EventTrigger EventName="FinishEdit">
                                                    <local:AddObjectAction />
                                                </i:EventTrigger>
                                            </att:InteractivityItems.Triggers>
                                        </att:InteractivityItems>
                                    </att:InteractivityTemplate>
                                </Setter.Value>
                            </att:InteractivitySetter>
                            <!--<Setter Property="Edit" Value="{Binding Converter={StaticResource EditConverter}}"></Setter>-->
                            <Setter Property="Edit">
                                <Setter.Value>
                                    <mt:StringModel Name="_New"></mt:StringModel>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style x:Key="MyDefaultContentStyle" TargetType="{x:Type tree:CustomTreeViewItem}">
                            <Setter Property="NodeTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <ContentControl Content="{Binding Converter={StaticResource TypeNameConverter}}"></ContentControl>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="ToolTip" Value="{Binding Key}"></Setter>
                            <Setter Property="Background" Value="White"></Setter>
                            <Setter Property="Orientation" Value="Horizontal"></Setter>
                            <Setter Property="BorderThickness" Value="2"></Setter>
                            <Setter Property="ItemsPanel">
                                <Setter.Value>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="NodeItemsSource">
                                <Setter.Value>
                                    <MultiBinding  Converter="{StaticResource ChildrenSelectorConverter}" >
                                        <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}"/>
                                        <!--<Binding Path="ChildrenSelector"  RelativeSource="{RelativeSource Mode=Self}"/>-->
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style x:Key="RootStyle" TargetType="{x:Type tree:CustomTreeViewItem}" BasedOn="{StaticResource RootSelectedHorizontalStyle}">
                            <att:InteractivitySetter Property="att:InteractivityItems.Template">
                                <Setter.Value>
                                    <att:InteractivityTemplate>
                                        <att:InteractivityItems>
                                            <att:InteractivityItems.Triggers>
                                                <i:EventTrigger EventName="FinishEdit">
                                                    <local:AddObjectAction />
                                                </i:EventTrigger>
                                            </att:InteractivityItems.Triggers>
                                        </att:InteractivityItems>
                                    </att:InteractivityTemplate>
                                </Setter.Value>
                            </att:InteractivitySetter>
                            <Setter Property="Edit">
                                <Setter.Value>
                                    <mt:StringModel Name="New"></mt:StringModel>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="FooterTemplateSelector" >
                                <Setter.Value>
                                    <local:FooterDataTemplateSelector>
                                        <local:FooterDataTemplateSelector.Template>
                                            <DataTemplate >
                                                <ContentPresenter Content="{Binding Data}">
                                                    <ContentPresenter.ContentTemplate>
                                                        <DataTemplate DataType="{x:Type mt:SelectionModel}">
                                                            <DataTemplate.Resources>
                                                                <local:TreeConverter x:Key="TreeConverter"/>
                                                            </DataTemplate.Resources>
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="*"/>
                                                                </Grid.RowDefinitions>

                                                                <TextBox Text="{Binding Name }"/>
                                                                <tree:CustomTreeView 
                                                                    Grid.Row="1"
                                                                    ItemsSource="{Binding Value, Mode=TwoWay, Converter={StaticResource TreeConverter}}" >
                                                                    <i:Interaction.Triggers>
                                                                        <i:EventTrigger SourceObject="{Binding RelativeSource={RelativeSource AncestorType={x:Type TreeView}, AncestorLevel=2}}"  
                                                                                        EventName="PreviewMouseDown">
                                                                            <local:CustomUpdateSourceBindingAction Property="{x:Static tree:CustomTreeViewItem.ItemsSourceProperty}"                                                                                             />
                                                                        </i:EventTrigger>
                                                                    </i:Interaction.Triggers>
                                                                    <tree:CustomTreeView.ItemContainerStyleSelector>
                                                                        <bc:ItemContainerStyleSelector
                                                                            DefaultStyle="{StaticResource MyDefaultContentStyle}" 
                                                                            SelectableStyle="{StaticResource SelectedTreeViewItem}"
                                                                            BreadcrumbStyle="{StaticResource BreachCrumb}" 
                                                                            BreadcrumbRootStyle ="{StaticResource BreadCrumbRootTreeViewItem}">
                                                                        </bc:ItemContainerStyleSelector>
                                                                    </tree:CustomTreeView.ItemContainerStyleSelector>
                                                                </tree:CustomTreeView>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ContentPresenter.ContentTemplate>
                                                </ContentPresenter>
                                            </DataTemplate>
                                        
                                        </local:FooterDataTemplateSelector.Template>
                                    </local:FooterDataTemplateSelector>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        <local:CustomStyleSelector x:Key="StyleSelector" 
                                                       RootStyle ="{StaticResource RootStyle}"
                                                       DefaultStyle="{StaticResource Style}">
                        </local:CustomStyleSelector>

                        <DataTemplate DataType="{x:Type mt:StringModel}">
                            <StackPanel>
                                <ex:EditableTextBlock x:Name="t1" Text="{Binding Name, Converter={x:Static conv:DefaultConverter.Instance}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ResourceDictionary>
                </FrameworkElement.Resources>

                <tree:CustomTreeView Grid.Row="4" ItemsSource="{Binding Nodes}" ItemContainerStyleSelector="{StaticResource StyleSelector}"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
