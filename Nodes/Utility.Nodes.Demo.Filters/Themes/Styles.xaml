<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:customtrees="CustomTrees"
                    xmlns:trees="http://schemas.utility.com/trees"
                    xmlns:local="clr-namespace:Utility.Nodes.Demo.Filters" 
                    xmlns:conv="clr-namespace:Utility.Nodes.Demo.Filters.Infrastructure">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/CustomTreeViewItemStyle.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>


    <Style TargetType="{x:Type Button}">
        <Setter Property="Foreground" Value="#373737" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Margin" Value="0" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border CornerRadius="4" Background="{TemplateBinding Background}">
                        <Grid>
                            <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E59400" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="LightSeaGreen" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="LightGray" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Opacity" Value="0.3" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="CustomToggleStyle"  TargetType="{x:Type ToggleButton}">
        <Setter Property="Foreground" Value="#373737" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Margin" Value="0" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border CornerRadius="4" Background="{TemplateBinding Background}">
                        <Grid>
                            <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E59400" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="LightSeaGreen" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="LightGray" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Opacity" Value="0.3" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <conv:TypeNameConverter x:Key="TypeNameConverter"/>
    <!--<views:ChildrenSelector x:Key="ChildrenSelector"/>-->

    <local:ChildrenSelectorConverter x:Key="ChildrenSelectorConverter"/>



    <Style x:Key="DefaultStyle" TargetType="{x:Type trees:CustomTreeViewItem}" BasedOn="{StaticResource {x:Type trees:CustomTreeViewItem}}">
        <Setter Property="ToolTip" Value="{Binding Guid}"></Setter>
        <!--<Setter Property="ChildrenSelector" Value="{StaticResource ChildrenSelector}"/>-->
        <Setter Property="NodeItemsSource">
            <Setter.Value>
                <MultiBinding Converter="{StaticResource ChildrenSelectorConverter}">
                    <!-- first binding ensures refresh every time combo-box opened -->
                    <Binding Path="SelectedIndex"  ElementName="SplitButton"/>
                    <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=Self}"/>
                    <Binding Path="NodeModels" RelativeSource="{RelativeSource Mode=Self}"/>
                    <Binding Path="ChildrenSelector"  RelativeSource="{RelativeSource Mode=Self}"/>
                </MultiBinding>
            </Setter.Value>
        </Setter>
        <Setter Property="EditTemplateSelector">
            <Setter.Value>
                <conv:EditTemplateSelector>
                    <conv:EditTemplateSelector.AndOrModelTemplate>
                        <DataTemplate>
                            <Ellipse Fill="Red"  Height="20" Width="20"></Ellipse>

                        </DataTemplate>
                    </conv:EditTemplateSelector.AndOrModelTemplate>
                    <conv:EditTemplateSelector.ResolvableModelTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Name}"></TextBox>
                        </DataTemplate>
                    </conv:EditTemplateSelector.ResolvableModelTemplate>
                </conv:EditTemplateSelector>
            </Setter.Value>
        </Setter>
        <Setter Property="NodeTemplate">
            <Setter.Value>
                <DataTemplate>
                    <ContentControl Content="{Binding Converter={StaticResource TypeNameConverter}}"></ContentControl>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>





</ResourceDictionary>