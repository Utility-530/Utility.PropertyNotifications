                                <i:Interaction.Behaviors>
                                    <cb1:FilterBehavior />
                                    <cmb_ros:ReflectionBehavior 
                                        Type="{x:Type models:NodeViewModel}"                                       
                                        FilterType="{Binding Data}">

                                    </cmb_ros:ReflectionBehavior>
