<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:local="clr-namespace:Utility.Simulation.ViewModel;assembly=Utility.Simulation">

    <DataTemplate DataType="{x:Type local:RateViewModel}">
        <Grid x:Name="ContainerWrapPanel" MinWidth="100">
            <TextBlock Text="{Binding Value, Mode=OneWay, StringFormat=N1}"></TextBlock>
            <Slider VerticalAlignment="Center" HorizontalAlignment="Center"
                    Width="{Binding ElementName=ContainerWrapPanel, Path=ActualWidth}"
                    Minimum="{Binding Minimum, Mode=OneWay}"
                    Maximum="{Binding Maximum, Mode=OneWay}"
                    Value="{Binding Value, Mode=TwoWay}">
            </Slider>

        </Grid>
    </DataTemplate>

</ResourceDictionary>