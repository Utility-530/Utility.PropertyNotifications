<rui:ReactiveUserControl 
    x:TypeArguments="y:ProgressStateSummary"
    x:Class="ReactiveAsyncWorker.Wpf.View.ProgressStateSummaryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:rui="http://reactiveui.net"
  xmlns:y="clr-namespace:ReactiveAsyncWorker.Model;assembly=ReactiveAsyncWorker"
    mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid MinWidth="180" MinHeight="40" >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="StateTextBlock"
            Padding="1" Grid.Row="0"  VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock x:Name="DateTextBlock"
            Padding="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"  ></TextBlock>
    </Grid>

</rui:ReactiveUserControl>
