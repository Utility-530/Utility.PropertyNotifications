                    xmlns:model="clr-namespace:ReactiveAsyncWorker.Model;assembly=ReactiveAsyncWorker">


    <Style TargetType="{x:Type rui:ViewModelViewHost}">
        <Style.Setters>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Stretch"></Setter>
        </Style.Setters>
    </Style>



    <DataTemplate  x:Key="ViewModelViewHostTemplate">
        <rui:ViewModelViewHost ViewModel="{Binding }">            
        </rui:ViewModelViewHost>
    </DataTemplate>

    <Style TargetType="{x:Type ItemsControl}" BasedOn="{StaticResource {x:Type ItemsControl}}">
        <Style.Setters>
            <Setter Property="ItemTemplate" Value="{StaticResource ViewModelViewHostTemplate}"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
