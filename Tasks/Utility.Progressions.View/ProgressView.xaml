<rui:ReactiveUserControl
    x:TypeArguments="vm:ProgressViewModel"
    x:Class="Utility.Progressions.View.ProgressView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    
    xmlns:rui="http://reactiveui.net"
    xmlns:vm="clr-namespace:Utility.Progressions"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid  VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch">
        <Viewbox>
            <Grid>
                <!--VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     VerticalContentAlignment="Stretch"
                     HorizontalContentAlignment="Stretch"-->
                <ProgressBar x:Name="MainProgressBar" MinHeight="30" MinWidth="200"
                     Minimum="0"
                     Maximum="100">
                </ProgressBar>
                
                <TextBlock x:Name="ProgressTextBlock" 
                           Text="%" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"></TextBlock>
            </Grid>

        </Viewbox>
    </Grid>
</rui:ReactiveUserControl>
