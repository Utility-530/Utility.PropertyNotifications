<UserControl x:Class="NetPrints.WPF.Views.SearchableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetPrints.WPF.Views" 
             xmlns:controls="clr-namespace:NetPrints.WPF.Controls;assembly=NetPrints.WPF.Controls"
             xmlns:vm="clr-namespace:NetPrints.ViewModels;assembly=NetPrints.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <FrameworkElement.Resources>

        <local:SuggestionListConverter x:Key="converter" />

        <DataTemplate DataType="{x:Type vm:SearchableItemViewModel}">
            <ContentControl Content="{Binding Converter={StaticResource converter}}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:SuggestionListItem}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="16" />
                </Grid.RowDefinitions>

                <Image Source="{Binding IconPath}" VerticalAlignment="Stretch" Grid.Column="0" />
                <TextBlock Text="{Binding Text}" Height="Auto" Grid.Column="1" Margin="2,0,0,0" />
            </Grid>
        </DataTemplate>
    </FrameworkElement.Resources>
    <FrameworkElement.DataContext>
        <vm:SuggestionListViewModel/>
    </FrameworkElement.DataContext>
    <Grid>
        <controls:SearchableComboBox
            x:Name="SearchableComboBox"
            ItemsSource="{Binding Items}" 
                                     SearchText="{Binding SearchText, Mode=OneWayToSource}"
                                     Predicate="{Binding Predicate}"/>
    </Grid>
</UserControl>
