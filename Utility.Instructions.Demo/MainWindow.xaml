            <HeaderedContentControl Header="Modify" Style="{StaticResource HeaderStyle2}">
                <TreeView x:Name="TreeView5">

                    <TreeView.Resources>
                        <Style TargetType="{x:Type TreeViewItem}" >
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                        </Style>

                        <DataTemplate DataType="{x:Type tree:TreeState}">
                            <Border BorderThickness="1" BorderBrush="Gray" Width="400">
                                <UniformGrid Rows="1" >
                                    <ContentControl Content="{Binding Index}"></ContentControl>
                                    <ContentControl Content="{Binding Back}"></ContentControl>
                                    <ContentControl Content="{Binding Current}"></ContentControl>
                                    <ContentControl Content="{Binding Forward}"></ContentControl>
                                    <ContentControl Content="{Binding Up}"></ContentControl>
                                </UniformGrid>
                            </Border>
                        </DataTemplate>
                    </TreeView.Resources>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type tree:Tree}"  ItemsSource="{Binding Items}">

                            <ContentControl Content="{Binding Data}" HorizontalAlignment="Stretch" >
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl" >
                                        <Setter Property="Foreground" Value="Black" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding State}" Value="{x:Static tree:State.Current}" >
                                                <Setter Property="Foreground" Value="Cyan" />

                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="{x:Static tree:State.Forward}">
                                                <Setter Property="Foreground" Value="DodgerBlue" />

                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="{x:Static tree:State.Back}">
                                                <Setter Property="Foreground" Value="IndianRed" />

                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="{x:Static tree:State.Up}">
                                                <Setter Property="Foreground" Value="Green" />

                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>

                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </HeaderedContentControl>

            <HeaderedContentControl Header="Content"  Style="{StaticResource HeaderStyle2}">

                <TextBox x:Name="TextBoxContent"></TextBox>
            </HeaderedContentControl>


            <HeaderedContentControl Header="Modify"  Style="{StaticResource HeaderStyle2}">
                <TreeView x:Name="TreeView" 
                      SelectedItemChanged="TreeView_OnSelectedItemChanged"
                      ItemTemplateSelector="{x:Static local:MyDataTemplateSelector.Instance}"
                      ItemContainerStyleSelector="{x:Static local:MyStyleSelector.Instance}">
                    <TreeView.Resources>
                        <Style TargetType="{x:Type TreeViewItem}" >
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            <Setter Property="IsExpanded" Value="True"/>
                            <Setter Property="IsSelected" Value="{Binding IsSelected,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            <Setter Property="Header" Value="{Binding Data}"/>
                        </Style>
                    </TreeView.Resources>
                </TreeView>
            </HeaderedContentControl>
        </UniformGrid>
    </Grid>
</Window>
