<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Utility.WPF.Controls.Buttons">

    <ControlTemplate x:Key="DirectionTemplate"  TargetType="{x:Type local:DirectionButtons}">
        <UniformGrid  Rows="1">
            <Button x:Name="Left" Margin="{TemplateBinding Margins}">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="ArrowLeft" />
                </Viewbox>
            </Button>

            <Button x:Name="Up" Margin="{TemplateBinding Margins}">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="ArrowUp" />
                </Viewbox>
            </Button>
            <Button x:Name="Down" Margin="{TemplateBinding Margins}">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="ArrowDown" />
                </Viewbox>
            </Button>

            <Button x:Name="Right" Margin="{TemplateBinding Margins}">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="ArrowRight" />
                </Viewbox>
            </Button>
        </UniformGrid>
    </ControlTemplate>

    <ControlTemplate x:Key="EditCollectionTemplate"  TargetType="{x:Type local:EditCollectionButtons}">
        <UniformGrid Rows="1">
            <Button x:Name="Add" Margin="{TemplateBinding Margins}">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="Add" />
                </Viewbox>
            </Button>
            <Button x:Name="Remove" Margin="{TemplateBinding Margins}">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="Remove" />
                </Viewbox>
            </Button>
        </UniformGrid>
    </ControlTemplate>

    <ControlTemplate x:Key="PersistenceTemplate"  TargetType="{x:Type local:PersistenceButtons}">
        <UniformGrid Rows="1">
            <Button x:Name="Load" Margin="{TemplateBinding Margins}" ToolTip="Load">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="ContentSaveOutline" />
                </Viewbox>
            </Button>
            <Button x:Name="Save" Margin="{TemplateBinding Margins}" ToolTip="Save">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="ContentSave" />
                </Viewbox>
            </Button>
        </UniformGrid>
    </ControlTemplate>

    <ControlTemplate x:Key="StepTemplate"  TargetType="{x:Type local:StepButtons}">
        <UniformGrid Rows="1">

            <Button x:Name="In" Margin="{TemplateBinding Margins}">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="DebugStepInto" />
                </Viewbox>
            </Button>
            <Button x:Name="Out" Margin="{TemplateBinding Margins}">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="DebugStepOut" />
                </Viewbox>
            </Button>
            <Button x:Name="Over" Margin="{TemplateBinding Margins}">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="DebugStepOver" />
                </Viewbox>
            </Button>
        </UniformGrid>
    </ControlTemplate>

    <ControlTemplate x:Key="PlayBackTemplate"  TargetType="{x:Type local:PlayBackButtons}">
        <ControlTemplate.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="Background" Value="Transparent" />
            </Style>
        </ControlTemplate.Resources>
        <UniformGrid Rows="1">
            <Button x:Name="Backward" Margin="{TemplateBinding Margins}" Height="{Binding ElementName=PlayPauseButton, Path=ActualHeight}">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="StepBackward" />
                </Viewbox>
            </Button>

            <local:PlayPauseButton x:Name="PlayPauseButton" />

            <Button x:Name="Forward" Margin="{TemplateBinding Margins}" Height="{Binding ElementName=PlayPauseButton, Path=ActualHeight}">
                <Viewbox>
                    <materialDesign:PackIcon
                                Kind="StepForward" />
                </Viewbox>
            </Button>
        </UniformGrid>
    </ControlTemplate>

    <Style TargetType="{x:Type local:DirectionButtons}">
        <Setter Property="Template" Value="{StaticResource DirectionTemplate}" />
    </Style>

    <Style TargetType="{x:Type local:EditCollectionButtons}">
        <Setter Property="Template" Value="{StaticResource EditCollectionTemplate}" />
    </Style>
    <Style TargetType="{x:Type local:PersistenceButtons}">
        <Setter Property="Template" Value="{StaticResource PersistenceTemplate}" />
    </Style>
    <Style TargetType="{x:Type local:StepButtons}">
        <Setter Property="Template" Value="{StaticResource StepTemplate}" />
    </Style>

    <Style TargetType="{x:Type local:PlayBackButtons}">
        <Setter Property="Template" Value="{StaticResource PlayBackTemplate}" />
    </Style>
</ResourceDictionary>