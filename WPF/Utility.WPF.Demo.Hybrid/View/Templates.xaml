<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:view11="http://schemas.utility.com/hybrid"
                    xmlns:mk="http://schemas.utility.com/markup"
                    xmlns:vm="clr-namespace:Utility.WPF.Demo.Common.ViewModels;assembly=Utility.WPF.Demo.Common">

    <DataTemplate DataType="{x:Type vm:NotesViewModel}">
        <view11:MasterNotesControl
            Width="400"
            CommandParameter="{Binding NewItem}"
            ItemsSource="{Binding Collection}"
            DisplayMemberPath="{mk:NameOf Type={x:Type vm:NoteViewModel}, Path=Text}">
        </view11:MasterNotesControl>
    </DataTemplate>
</ResourceDictionary>