<UserControl x:Class="Utility.WPF.Demo.Hybrid.DataUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Utility.WPF.Demo.Common.ViewModels;assembly=Utility.WPF.Demo.Common"
             xmlns:mk="http://schemas.utility.com/utilitywpf"
             xmlns:view="http://schemas.utility.com/hybrid"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <FrameworkElement.DataContext>
        <vm:ButtonsViewModel />
    </FrameworkElement.DataContext>
    <Grid>
        <view:MasterButtonsControl
            CommandPath="{mk:NameOf Type={x:Type vm:ButtonViewModel}, Path=Command}"
            ItemsSource="{Binding Data}"
            Change="MasterNotesControl_Change"
            DisplayMemberPath="{mk:NameOf Type={x:Type vm:ButtonViewModel}, Path=Header}">
        </view:MasterButtonsControl>
    </Grid>
</UserControl>