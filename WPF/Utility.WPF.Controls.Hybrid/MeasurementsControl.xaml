<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:b="http://schemas.utility.com/behaviors"
                    xmlns:local="clr-namespace:Utility.WPF.Controls.Hybrid"
                    xmlns:res="http://schemas.utility.com/resourcedictionary"
                    xmlns:utl="http://schemas.utility.com/utilitywpf"
                    xmlns:wpf="http://propertytools.org/wpf">

    <!--<ResourceDictionary.MergedDictionaries>
        <res:SharedResourceDictionary Source="/Utility.WPF.Controls.Master;component/SplitControl.xaml" />
    </ResourceDictionary.MergedDictionaries>-->

    <Style TargetType="{x:Type local:MeasurementsControl}" BasedOn="{StaticResource {x:Type utl:SplitControl}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MeasurementsControl}">
                    <DockPanel x:Name="PART_DockPanel" Background="{Binding Background, Source=TemplatedParent}">
                        <ContentPresenter x:Name="PART_HeaderPresenter"></ContentPresenter>
                        <WrapPanel x:Name="PART_WrapPanel">
                            <ComboBox>
                                <i:Interaction.Behaviors>
                                    <b:EnumSelectorBehavior
                                                                    SelectedEnum="{Binding SelectedUnit, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                                    EnumFilterCollection="{Binding EnumFilterCollection,RelativeSource={RelativeSource Mode=TemplatedParent} }"
                                                                  EnumType="{Binding Unit, RelativeSource={RelativeSource Mode=TemplatedParent}}"></b:EnumSelectorBehavior>
                                </i:Interaction.Behaviors>
                            </ComboBox>
                        </WrapPanel>
                        <wpf:DockPanelSplitter x:Name="PART_DockPanelSplitter" Background="WhiteSmoke"></wpf:DockPanelSplitter>
                        <ContentPresenter  x:Name="PART_ContentPresenter" />
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>