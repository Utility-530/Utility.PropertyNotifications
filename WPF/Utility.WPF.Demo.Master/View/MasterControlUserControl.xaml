<UserControl x:Class="Utility.WPF.Demo.Master.View.MasterControlUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utl="http://schemas.utility.com/markup"
             xmlns:conv="http://schemas.utility.com/converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:b="http://schemas.utility.com/behaviors"
             xmlns:viewModel1="clr-namespace:Utility.WPF.Demo.Master.View"
             xmlns:view11="http://schemas.utility.com/master"
             xmlns:btns="http://schemas.utility.com/buttons"
             xmlns:utl1="http://schemas.utility.com/utilitywpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <FrameworkElement.DataContext>
        <viewModel1:MasterControlViewModel />
    </FrameworkElement.DataContext>
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top">

            <btns:DirectionButton x:Name="ToggleButton2"></btns:DirectionButton>
            <TextBlock Text="{Binding ElementName=ToggleButton2, Path=Movement, Mode=OneWay, Converter={x:Static conv:LambdaConverter.StringConverter}}" Margin="5" Background="AliceBlue" Height="30" />
        </WrapPanel>

        <UniformGrid Rows="1">
            <view11:MasterControl
            Movement="{Binding ElementName=ToggleButton2, Path=Movement}"
            ItemsSource="{Binding Data, Mode=OneWay}"
                                             Change="{utl:Command ChangeCommand, ConversionType=Default}"
                                             CommandParameter="{Binding NewItem}"
                                             ButtonTypes="Add,Remove">
                <utl1:LayOutListBox
                      VerticalAlignment="Center" />
            </view11:MasterControl>

            <view11:MasterControl
                ItemsSource="{Binding Data, Mode=OneWay, Converter={x:Static conv:DefaultConverter.Instance}}">
                <ListBox
                      VerticalAlignment="Center" />
            </view11:MasterControl>

            <view11:MasterControl
                ButtonTypes="Enable,Disable"
                ItemsSource="{Binding Data, Mode=OneWay, Converter={x:Static conv:DefaultConverter.Instance}}">
                <ComboBox  Width="200" SelectedIndex="0"
                      VerticalAlignment="Center" />
            </view11:MasterControl>
        </UniformGrid>
    </DockPanel>
</UserControl>