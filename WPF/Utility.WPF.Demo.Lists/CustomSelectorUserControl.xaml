<UserControl x:Class="Utility.WPF.Demo.Lists.CustomSelectorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utility.WPF.Demo.Lists"
             xmlns:view="http://schemas.utility.com/lists" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
             xmlns:tree="http://schemas.utility.com/trees"
             x:Name="UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Utility.WPF.Demo.Data;component/DataTemplate/Character.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <FrameworkElement.DataContext>
        <local:CustomSelectorViewModel/>
    </FrameworkElement.DataContext>

    <StackPanel>
        <WrapPanel DockPanel.Dock="Top">
            <ToggleButton x:Name="ToggleButton1" Width="72" Height="28" IsChecked="True">Is Grid</ToggleButton>
        </WrapPanel>

        <view:CustomSelector ItemsWidth="300" ItemsHeight="500"  MaxHeight="1000"
                             IsGrid="{Binding ElementName=ToggleButton1, Path=IsChecked}"
                               CheckedPropertyName="IsRhPositive"                      
                               d:ItemsSource="{StaticResource Characters}"                              >
            <FrameworkElement.DataContext>
                <local:CustomSelectorViewModel/>
            </FrameworkElement.DataContext>
            <ItemsControl.ItemsSource>
                <Binding Path="Items"></Binding>
            </ItemsControl.ItemsSource>
            <ItemsControl.ItemTemplate>
                <StaticResource ResourceKey="CharacterBaseClass"/>
            </ItemsControl.ItemTemplate>

            <!--Edit="{Binding Edit,Mode=TwoWay}">-->
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="FinishEdit">
                    <i:InvokeCommandAction Command="{Binding FinishEdit}"  PassEventArgsToCommand="True"></i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </view:CustomSelector>
        
        <tree:CustomTreeView ItemsSource="{Binding Items}">
            <tree:CustomTreeView.ItemTemplate>
                <DataTemplate>
                    <view:CustomSelector ItemsWidth="300" ItemsHeight="500" 
                             IsGrid="{Binding ElementName=ToggleButton1, Path=IsChecked}"
                               CheckedPropertyName="IsRhPositive"                      
                               d:ItemsSource="{StaticResource Characters}"                              >
                        <FrameworkElement.DataContext>
                            <local:CustomSelectorViewModel/>
                        </FrameworkElement.DataContext>
                        <ItemsControl.ItemsSource>
                            <Binding Path="Items"></Binding>
                        </ItemsControl.ItemsSource>
                        <ItemsControl.ItemTemplate>
                            <StaticResource ResourceKey="CharacterBaseClass"/>
                        </ItemsControl.ItemTemplate>

                        <!--Edit="{Binding Edit,Mode=TwoWay}">-->
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="FinishEdit">
                                <i:InvokeCommandAction Command="{Binding FinishEdit}"  PassEventArgsToCommand="True"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </view:CustomSelector>
                </DataTemplate>
            </tree:CustomTreeView.ItemTemplate>
        </tree:CustomTreeView>   
    </StackPanel>
</UserControl>
