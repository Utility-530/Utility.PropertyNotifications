    <ProjectReference Include="..\Utility.WPF.ResourceDictionarys\Utility.WPF.ResourceDictionarys.csproj" />
    <ProjectReference Include="..\Utility.WPF.Demo.Panels\Utility.WPF.Demo.Panels.csproj" />
    <ProjectReference Include="..\Utility.WPF.Templates\Utility.WPF.Templates.csproj" />
    <ProjectReference Include="..\Utility.WPF\Utility.WPF.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="JsonControl.cs">
      <DependentUpon>JsonControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="ObjectControl.cs">
      <DependentUpon>ObjectControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="ObjectFlowControl.cs">
      <DependentUpon>ObjectFlowControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="ObjectComboBox.cs">
