<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Utility.WPF.Controls.Objects">


    <Style TargetType="{x:Type local:ObjectItemsControl}" 
           BasedOn="{StaticResource {x:Type ItemsControl}}">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <RadioButton MinWidth="50"
                                Margin="3"
                                IsChecked="{Binding IsChecked}"
                                Command="{Binding Command, Mode=OneWay}"
                                Content="{Binding Property.Name, Mode=OneWay}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>