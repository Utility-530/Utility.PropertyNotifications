<UserControl x:Class="Utility.WPF.Demo.SplitButtons.PopupButtonUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Utility.WPF.Demo.SplitButtons" 
             xmlns:sb="http://schemas.utility.com/splitbuttons"
             Height="400" 
        Width="600">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <!--<ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Controls/PopupButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>-->

            <Style x:Key="MenuButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="LightGray"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </FrameworkElement.Resources>

    <Grid Margin="20">
        <StackPanel >
            <!-- Basic Usage -->
            <sb:PopupButton>
                <sb:PopupButton.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Click Me" Margin="0,0,5,0"/>
                        <Path Data="M 0 0 L 4 4 L 8 0 Z" Fill="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                </sb:PopupButton.Header>

                <sb:PopupButton.Content>
                    <StackPanel>
                        <TextBlock Text="This is popup content!" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="You can put any content here." TextWrapping="Wrap" MaxWidth="200"/>
                        <Button Content="Action Button" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </sb:PopupButton.Content>
            </sb:PopupButton>

            <!-- Advanced Usage with Custom Styling -->
            <sb:PopupButton PopupPlacement="Bottom" 
                                   Background="LightGreen" 
                                   BorderBrush="DarkGreen">
                <sb:PopupButton.Header>
                    <TextBlock Text="Settings ⚙️" FontSize="14"/>
                </sb:PopupButton.Header>

                <sb:PopupButton.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Settings Panel" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                            <CheckBox Content="Enable notifications" Margin="0,0,10,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBlock Text="Theme:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox SelectedIndex="0" Width="100">
                                <ComboBoxItem Content="Light"/>
                                <ComboBoxItem Content="Dark"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </sb:PopupButton.Content>
            </sb:PopupButton>

            <!-- Menu-style Usage -->
            <sb:PopupButton PopupPlacement="Right">
                <sb:PopupButton.Header>
                    <TextBlock Text="Menu ☰"/>
                </sb:PopupButton.Header>

                <sb:PopupButton.Content>
                    <StackPanel>
                        <Button Content="New File" Style="{DynamicResource MenuButtonStyle}" Click="MenuItemClick"/>
                        <Button Content="Open File" Style="{DynamicResource MenuButtonStyle}" Click="MenuItemClick"/>
                        <Button Content="Save File" Style="{DynamicResource MenuButtonStyle}" Click="MenuItemClick"/>
                        <Separator Margin="0,5"/>
                        <Button Content="Exit" Style="{DynamicResource MenuButtonStyle}" Click="MenuItemClick"/>
                    </StackPanel>
                </sb:PopupButton.Content>
            </sb:PopupButton>

        </StackPanel>
    </Grid>

</UserControl>
