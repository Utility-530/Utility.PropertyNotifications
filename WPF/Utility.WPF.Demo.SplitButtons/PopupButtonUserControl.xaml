<UserControl x:Class="Utility.WPF.Demo.SplitButtons.PopupButtonUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Utility.WPF.Demo.SplitButtons" 
             xmlns:sb="http://schemas.utility.com/splitbuttons"
      >
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <!--<ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Controls/PopupButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>-->

            <Style x:Key="MenuButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="LightGray"/>
                    </Trigger>
                </Style.Triggers>
            </Style>


                <Style TargetType="{x:Type sb:PopupButton}">
                    <Setter Property="BorderBrush" Value="Transparent"></Setter>
                    <Setter Property="Background" Value="Transparent"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                </Style>     
        </ResourceDictionary>
    </FrameworkElement.Resources>


        <UniformGrid  Columns="1">

            <sb:PopupButton  Foreground="BlueViolet" PopupPlacement="Top">
                <sb:PopupButton.Header>
                    <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Click Me"  FontSize="18" Margin="0,0,5,0"/>
                        <Path Data="M 8 0 L 0 0 L 4 -4 Z" Fill="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                </sb:PopupButton.Header>

                <sb:PopupButton.Content>
                    <StackPanel>
                        <TextBlock Text="This is popup content!" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="You can put any content here." TextWrapping="Wrap" MaxWidth="200"/>
                        <Button Content="Action Button" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </sb:PopupButton.Content>
            </sb:PopupButton>


            <sb:PopupButton PopupPlacement="Bottom"
                           >
                <sb:PopupButton.Header>
                <TextBlock Text="⚙️"  FontSize="48" />
                </sb:PopupButton.Header>

                <sb:PopupButton.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                            <CheckBox Content="Enable notifications" Margin="0,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBlock Text="Theme" VerticalAlignment="Center" Margin="0,0,0,5"/>
                            <ComboBox SelectedIndex="0" >
                                <ComboBoxItem Content="Light"/>
                                <ComboBoxItem Content="Dark"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </sb:PopupButton.Content>
            </sb:PopupButton>

            <!-- Menu-style Usage -->
            <sb:PopupButton >
 
                <sb:PopupButton.Header>
                <TextBlock FontWeight="Bold" FontSize="48" Text="☰"/>
                </sb:PopupButton.Header>

                <sb:PopupButton.Content>
                    <StackPanel>
                        <Button Content="New File" Style="{DynamicResource MenuButtonStyle}" Click="MenuItemClick"/>
                        <Button Content="Open File" Style="{DynamicResource MenuButtonStyle}" Click="MenuItemClick"/>
                        <Button Content="Save File" Style="{DynamicResource MenuButtonStyle}" Click="MenuItemClick"/>
                        <Separator Margin="0,5"/>
                        <Button Content="Delete File" Style="{DynamicResource MenuButtonStyle}" Click="MenuItemClick"/>
                    </StackPanel>
                </sb:PopupButton.Content>
            </sb:PopupButton>

        </UniformGrid>

</UserControl>
