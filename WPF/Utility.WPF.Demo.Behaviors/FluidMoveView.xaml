<UserControl x:Class="Utility.WPF.Demo.Behaviors.FluidMoveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Utility.WPF.Demo.Behaviors" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <ItemsControl x:Name="_grid" Background="Black">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid
                                                            x:Name="ctlItem"
                                                            Height="60"
                                                            Margin="0,4,0,0"
                                                            RenderTransformOrigin="0.5,0.5"
                                                            TextBlock.FontFamily="Ringside Regular Book"
                                                            TextBlock.FontSize="32"
                                                            TextBlock.Foreground="
                                                                                             #312a37">
                    <!--<Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="dummyName2" ScaleX="1" ScaleY="1" />
                            <ScaleTransform x:Name="dummyName3" leep:RankBehavior.IsScaleTransform="True" ScaleX="1" ScaleY="{BindTo this.ScaleX}" />
                            <TranslateTransform x:Name="dummyName" leep:RankBehavior.IsTranslateTransform="True" />
                        </TransformGroup>
                    </Grid.RenderTransform>-->
                    <Grid.Triggers>
                        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     Duration="00:00:02"
                                                     From="0.9"
                                                     To="1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="FrameworkElement.Unloaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     Duration="00:00:02"
                                                     From="1"
                                                     To="0.9" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Grid.Triggers>
                    <Grid.Resources>
                        <Storyboard
                                                                    x:Key="sbEntryInPlay"
                                                                    RepeatBehavior="Forever">
                            <DoubleAnimationUsingKeyFrames
                                                                        Storyboard.TargetName="txtName"
                                                                        Storyboard.TargetProperty="Opacity">
                                <LinearDoubleKeyFrame
                                                                            KeyTime="00:00:00.2"
                                                                            Value="1.0" />
                                <LinearDoubleKeyFrame
                                                                            KeyTime="00:00:00.4"
                                                                            Value="0.2" />
                                <LinearDoubleKeyFrame
                                                                            KeyTime="00:00:00.5"
                                                                            Value="1.0" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </Grid.Resources>
                    <Rectangle
                                                                x:Name="ctlLeaderboardEntryBackground"
                                                                Fill="
                                                                                 #FFFFFF"
                                                                Opacity="1"
                                                                RadiusX="10"
                                                                RadiusY="10" />
                    <StackPanel
                                                                x:Name="ctlGroupLeaderboardEntryData"
                                                                Orientation="Horizontal">
                        <TextBlock
                                                                    Width="66"
                                                                    Margin="3,0"
                                                                    VerticalAlignment="Center"
                                                                    FontWeight="Bold"
                                                                    Text="{Binding  Path=(Grid.Row),RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}}"
                                                                    TextAlignment="Center" />
                        <Viewbox
                                                                    x:Name="txtName"
                                                                    Width="175"
                                                                    Margin="3,0"
                                                                    HorizontalAlignment="Left"
                                                                    Stretch="Fill"
                                                                    StretchDirection="DownOnly">
                            <StackPanel
                                                                        HorizontalAlignment="Left"
                                                                        Orientation="Horizontal">
                                <!--<TextBlock
                                                                            Text="Username"
                                                                            />-->
                                <TextBlock
                                                                            Text="{Binding Name}" />
                                <TextBlock
                                                                            Margin="10,0,0,0"
                                                                            Text="{Binding Value}" />
                            </StackPanel>
                        </Viewbox>
                        <!--<TextBlock
                                                                    x:Name="txtPoints"
                                                                    Width="72"
                                                                    Margin="5,0"
                                                                    VerticalAlignment="Center"
                                                                    FontWeight="Bold"
                                                                    Text="Points"
                                                                    TextAlignment="Center"
                                                                    />-->
                        <TextBlock
                                                                    x:Name="txtHolesPlayed"
                                                                    Width="40"
                                                                    Margin="10,0"
                                                                    VerticalAlignment="Center"
                                                                    FontWeight="Bold"
                                                                    Opacity="0.5"
                                                                    Text="{Binding HolesPlayed}"
                                                                    TextAlignment="Center" />
                        <TextBlock
                                                                    x:Name="txtHolesPlayedTick"
                                                                    Width="40"
                                                                    Margin="10,0"
                                                                    VerticalAlignment="Center"
                                                                    FontFamily="Marlett"
                                                                    Opacity="0.5"
                                                                    Text="a"
                                                                    TextAlignment="Center" />
                        <TextBlock
                                                                    x:Name="txtStrokes"
                                                                    Width="43"
                                                                    Margin="3,0"
                                                                    VerticalAlignment="Center"
                                                                    Text="Strokes"
                                                                    TextAlignment="Center"
                                                                    Visibility="Collapsed" />
                        <TextBlock
                                                                    x:Name="txtTimeInPlay"
                                                                    Text="imeInPlay"
                                                                    Visibility="Collapsed" />
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel IsItemsHost="True">
                    <i:Interaction.Behaviors>
                        <i:FluidMoveBehavior AppliesTo="Children" Duration="0:0:02.5">
                            <i:FluidMoveBehavior.EaseX>
                                <BackEase EasingMode="EaseInOut" Amplitude="0.5" />
                            </i:FluidMoveBehavior.EaseX>
                            <i:FluidMoveBehavior.EaseY>
                                <BackEase EasingMode="EaseInOut" Amplitude="0.5" />
                            </i:FluidMoveBehavior.EaseY>
                        </i:FluidMoveBehavior>
                    </i:Interaction.Behaviors>
                </StackPanel>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</UserControl>