<UserControl x:Class="Utility.WPF.Demo.Adorners.DragLineUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utility.WPF.Demo.Adorners"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Height="40" Click="Add_Click" Content="Add Adorners" />
            <Button Height="40" Click="Remove_Click"  Content="Remove Adorners" />
        </ToolBar>
        <UniformGrid x:Name="Grid" Rows="1" Background="Transparent">
            <Ellipse x:Name="Blue"  Fill="#FF32328A" Height="20" Width="20"></Ellipse>

            <Ellipse x:Name="Green" Fill="#FF436D43" Height="20" Width="20"></Ellipse>
        </UniformGrid>
    </DockPanel>
</UserControl>
