<UserControl x:Class="Utility.WPF.Demo.Adorners.TestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utility.WPF.Demo.Adorners"
             xmlns:ad="http://schemas.utility.com/adorners" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid>
        <TextBlock x:Name="TextBlock1" Height="30" Width="100" Text="This is text" Background="AntiqueWhite">
            <i:Interaction.Behaviors>
                <ad:NullBehavior DefaultValue="hello"/>                
            </i:Interaction.Behaviors>
        </TextBlock>


        <TextBox x:Name="TextBox1" Height="30" Width="100" Text="This is text" Background="AntiqueWhite">
            <i:Interaction.Behaviors>
                <ad:NullBehavior DefaultValue="hello"/>                
            </i:Interaction.Behaviors>
        </TextBox>
    </UniformGrid>
</UserControl>
