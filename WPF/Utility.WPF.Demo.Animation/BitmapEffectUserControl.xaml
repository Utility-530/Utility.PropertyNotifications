        <Style x:Key="ImageStyle" TargetType="{x:Type Path}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <effects:MonochromeEffect FilterColor="Red" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </FrameworkElement.Resources>
    <UniformGrid>
        <Grid>
            <Viewbox Height="200">
                <Path Fill="Cornsilk" Stroke="DarkGoldenrod"
                   Style="{StaticResource ImageStyle}"
       Data="{StaticResource GGroup}" />
            </Viewbox>
            <TextBox x:Name="textBlock" Style="{StaticResource TextBoxStyle}" VerticalAlignment="Bottom" Height="30">

                <TextBox.Effect>
                    <effects:MonochromeEffect FilterColor="Red" />
                </TextBox.Effect>
            </TextBox>
        </Grid>

        <Grid>
            <Viewbox Height="200">
                <Path Fill="Cornsilk" Stroke="DarkGoldenrod"
                   Style="{StaticResource ImageStyle}"
       Data="{StaticResource GGroup}" />
            </Viewbox>
            <TextBlock x:Name="textBlock1">
                <TextBlock.BitmapEffect>
                    <BlurBitmapEffect></BlurBitmapEffect>
                </TextBlock.BitmapEffect>
            </TextBlock>
        </Grid>

        <Grid>
            <Viewbox Height="200">
                <Path Fill="Cornsilk" Stroke="DarkGoldenrod"
                   Style="{StaticResource ImageStyle}"
       Data="{StaticResource GGroup}" />
            </Viewbox>
            <TextBlock x:Name="textBlock2">
                <TextBlock.Effect>
                    <effects:GrayScaleEffect ></effects:GrayScaleEffect>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>

        <Grid>
            <Viewbox Height="200">
                <Path Fill="Cornsilk" Stroke="DarkGoldenrod"
                   Style="{StaticResource ImageStyle}"
       Data="{StaticResource GGroup}" />
            </Viewbox>
            <TextBlock x:Name="textBlock3">
                <TextBlock.Effect>
                    <effects:DirectionalBlurEffect ></effects:DirectionalBlurEffect>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>

        <Grid>
            <Viewbox Height="200">
                <Path Fill="Cornsilk" Stroke="DarkGoldenrod"
                   Style="{StaticResource ImageStyle}"
       Data="{StaticResource GGroup}" />
            </Viewbox>
            <TextBlock x:Name="textBlock4">
                <TextBlock.BitmapEffect>
                    <DropShadowBitmapEffect></DropShadowBitmapEffect>
                </TextBlock.BitmapEffect>
            </TextBlock>
        </Grid>

        <Grid>
            <Viewbox Height="200">
                <Path Fill="Cornsilk" Stroke="DarkGoldenrod"
                   Style="{StaticResource ImageStyle}"
       Data="{StaticResource GGroup}" />
            </Viewbox>
            <TextBlock x:Name="textBlock5">
                <TextBlock.Effect>
                    <effects:OldMovieEffect></effects:OldMovieEffect>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>

        <Grid>
            <Viewbox Height="200">
                <Path Fill="Cornsilk" Stroke="DarkGoldenrod"
                   Style="{StaticResource ImageStyle}"
       Data="{StaticResource GGroup}" />
            </Viewbox>
            <TextBlock x:Name="textBlock6">
                <TextBlock.Effect>
                    <effects:SharpenEffect></effects:SharpenEffect>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>
    </UniformGrid>
</UserControl>