<UserControl
    x:Class="Utility.WPF.Demo.Trees.ComboTreeViewItemUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.utility.com/behaviors"
    xmlns:btns="http://schemas.utility.com/buttons"
    xmlns:c="http://schemas.utility.com/colours"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:Utility.WPF.Demo.Data.Model;assembly=Utility.WPF.Demo.Data"
    xmlns:h="clr-namespace:Utility.WPF.Helpers;assembly=Utility.WPF.Helpers"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Utility.WPF.Demo.Trees"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sb="http://schemas.utility.com/splitbuttons"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:trees="http://schemas.utility.com/trees"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/ComboTreeViewItem.xaml" />
                <ResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/AddRemoveButtons.xaml" />
                <ResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/Shared.xaml" />
                <ResourceDictionary Source="/Utility.WPF.Demo.Data;component/DataTemplate/Character.xaml" />
                <ResourceDictionary Source="/Utility.WPF.Geometries;component/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="EditTemplate">
                <Grid Name="rootElement" Background="#DCDCDC">
                    <Grid.Resources>

                        <Style x:Key="inlineText" TargetType="{x:Type TextBlock}">
                            <Setter Property="Margin" Value="10,5,10,0" />
                            <Setter Property="FontWeight" Value="Normal" />
                            <Setter Property="FontSize" Value="12" />
                        </Style>
                        <Style x:Key="titleText" TargetType="{x:Type TextBlock}">
                            <Setter Property="DockPanel.Dock" Value="Top" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="Margin" Value="10,5,10,0" />
                        </Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin" Value="10,5,10,0" />
                            <Setter Property="Width" Value="60" />
                        </Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Margin" Value="10,5,10,0" />
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="4"
                        Margin="10,5,10,0"
                        HorizontalAlignment="Center"
                        Style="{StaticResource titleText}">
                        Character
                    </TextBlock>

                    <TextBlock
                        Name="nameLabel"
                        Grid.Row="1"
                        Grid.Column="0"
                        Style="{StaticResource inlineText}">
                        First Name
                    </TextBlock>
                    <TextBox
                        Name="txtName"
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="3" />

                    <TextBlock
                        Name="addressLabel"
                        Grid.Row="2"
                        Grid.Column="0"
                        Style="{StaticResource inlineText}">
                        Last Name
                    </TextBlock>
                    <TextBox
                        Name="txtAddress"
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="3" />

                    <TextBlock
                        Name="zipLabel"
                        Grid.Row="4"
                        Grid.Column="0"
                        Style="{StaticResource inlineText}">
                        Zip
                    </TextBlock>
                    <TextBox
                        Name="txtZip"
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="100" />
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="ItemTemplate">
                <Border
                    Width="100"
                    Height="20"
                    Margin="4"
                    Background="Snow">
                    <TextBlock Text="{Binding}" />
                </Border>
            </DataTemplate>

            <sys:Double x:Key="MaxDropDownHeight">400.0</sys:Double>

            <SineEase x:Key="Ease" EasingMode="EaseInOut" />

            <Storyboard x:Key="Enter">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleX">
                    <EasingDoubleKeyFrame
                        EasingFunction="{StaticResource Ease}"
                        KeyTime="0:0:0.3"
                        Value="1.02" />
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleY">
                    <EasingDoubleKeyFrame
                        EasingFunction="{StaticResource Ease}"
                        KeyTime="0:0:0.3"
                        Value="1.02" />
                </DoubleAnimationUsingKeyFrames>

                <ThicknessAnimation
                    Storyboard.TargetName="TertiaryBorder"
                    Storyboard.TargetProperty="BorderThickness"
                    To="3"
                    Duration="0:0:0.3" />
                <Storyboard>
                    <ColorAnimation
                        Storyboard.TargetName="TertiaryBorder"
                        Storyboard.TargetProperty="BorderBrush.Color"
                        Duration="0:0:0.3">
                        <ColorAnimation.To>
                            <Color
                                A="90"
                                B="10"
                                G="40"
                                R="40" />
                        </ColorAnimation.To>
                    </ColorAnimation>
                </Storyboard>
            </Storyboard>

            <Storyboard x:Key="Exit">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleX">
                    <EasingDoubleKeyFrame
                        EasingFunction="{StaticResource Ease}"
                        KeyTime="0:0:0.3"
                        Value="1" />
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleY">
                    <EasingDoubleKeyFrame
                        EasingFunction="{StaticResource Ease}"
                        KeyTime="0:0:0.3"
                        Value="1" />
                </DoubleAnimationUsingKeyFrames>
                <ThicknessAnimation
                    Storyboard.TargetName="TertiaryBorder"
                    Storyboard.TargetProperty="BorderThickness"
                    To="0"
                    Duration="0:0:0.3" />
                <Storyboard>
                    <ColorAnimation
                        Storyboard.TargetName="TertiaryBorder"
                        Storyboard.TargetProperty="BorderBrush.Color"
                        Duration="0:0:0.3">
                        <ColorAnimation.To>
                            <Color
                                A="00"
                                B="10"
                                G="40"
                                R="40" />
                        </ColorAnimation.To>
                    </ColorAnimation>
                </Storyboard>
            </Storyboard>

            <SolidColorBrush x:Key="ARGB">
                <SolidColorBrush.Color>
                    <Color
                        A="5"
                        B="10"
                        G="10"
                        R="10" />
                </SolidColorBrush.Color>
            </SolidColorBrush>

            <Style x:Key="CustomTreeViewItem" TargetType="{x:Type trees:CustomTreeViewItem}">
                <Setter Property="IsExpanded" Value="{Binding Path=IsExpanded, Mode=TwoWay}" />
                <Setter Property="IsValid" Value="{Binding Path=IsValid, Mode=TwoWay}" />
                <Setter Property="IsEditable" Value="{Binding Path=IsEditable, Mode=TwoWay}" />
                <!--<Setter Property="ItemContainerStyleSelector" Value="{StaticResource ItemContainerStyleSelector}"></Setter>-->
                <Setter Property="AddCommand" Value="{Binding Path=AddCommand}" />
                <Setter Property="RemoveCommand" Value="{Binding Path=RemoveCommand}" />
                <!--<Setter Property="EditCommand" Value="{Binding Path=EditCommand}" />-->
                <Setter Property="AddParentCommand" Value="{Binding Path=AddParentCommand}" />
                <Setter Property="IsHighlighted" Value="{Binding Path=IsHighlighted}" />
                <Setter Property="Visibility" Value="{Binding Path=IsVisible, Converter={StaticResource VisibilityConverter}}" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="HorizontalContentAlignment" Value="{Binding Path=HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
                <Setter Property="VerticalContentAlignment" Value="{Binding Path=VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
                <Setter Property="Padding" Value="1,0,0,0" />
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                <Setter Property="FocusVisualStyle" Value="{StaticResource TreeViewItemFocusVisual}" />
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <MultiBinding Converter="{StaticResource MultiItemsPanelConverter}">
                            <Binding Path="Arrangement" />
                            <Binding Path="Rows" />
                            <Binding Path="Columns" />
                            <Binding Path="Orientation" />
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type trees:CustomTreeViewItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="19" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <ToggleButton
                                    x:Name="Expander"
                                    ClickMode="Press"
                                    IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                    Opacity="0.2"
                                    Style="{StaticResource ExpandCollapseToggleStyle}" />
                                <Border
                                    x:Name="Bd"
                                    Grid.Column="1"
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                    <Grid HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="24" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <Border
                                            x:Name="MainBorder"
                                            Grid.Column="1"
                                            HorizontalAlignment="Stretch"
                                            Background="Transparent"
                                            BorderThickness="2"
                                            CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                            RenderTransformOrigin=".5, .5">
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1" />
                                            </Border.RenderTransform>
                                            <Border
                                                x:Name="TertiaryBorder"
                                                HorizontalAlignment="Stretch"
                                                BorderThickness="2"
                                                CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                                <Border
                                                    x:Name="SecondaryBorder"
                                                    HorizontalAlignment="Stretch"
                                                    BorderThickness="2"
                                                    CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                                    <ContentPresenter
                                                        x:Name="PART_Header"
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        ContentSource="Header" />
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Setters>
                                                                <Setter Property="BorderBrush" Value="Transparent" />
                                                            </Style.Setters>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Setters>
                                                            <Setter Property="BorderBrush" Value="Transparent" />
                                                        </Style.Setters>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Setters>
                                                        <Setter Property="BorderBrush" Value="Transparent" />
                                                    </Style.Setters>
                                                </Style>
                                            </Border.Style>
                                        </Border>

                                        <WrapPanel
                                            x:Name="WrapPanel1"
                                            Grid.Row="1"
                                            Grid.ColumnSpan="4"
                                            Width="80"
                                            IsEnabled="{TemplateBinding IsShowing}"
                                            Opacity="1"
                                            Orientation="Horizontal"
                                            Visibility="{TemplateBinding IsEditable,
                                                                         Converter={StaticResource VisibilityConverter}}">

                                            <sb:SplitButton
                                                x:Name="SplitButton"
                                                ItemContainerStyle="{TemplateBinding NodeContainerStyle}"
                                                ItemContainerStyleSelector="{TemplateBinding NodeContainerStyleSelector}"
                                                ItemTemplate="{TemplateBinding NodeTemplate}"
                                                ItemTemplateSelector="{TemplateBinding NodeTemplateSelector}"
                                                ItemsSource="{TemplateBinding NodeItemsSource}"
                                                Style="{TemplateBinding SplitButtonStyle}">

                                                <!--<local:ChildrenSelectorConverter x:Key="ChildrenSelectorConverter" />-->

                                                <!--<sb:SplitButton.ItemsSource>
                                            <MultiBinding Converter="{StaticResource ChildrenSelectorConverter}">
                                                -->
                                                <!--  first binding ensures refresh every time combo-box opened  -->
                                                <!--
                                                <Binding Path="SelectedIndex"  ElementName="SplitButton" />
                                                <Binding Path="DataContext" RelativeSource="{RelativeSource Mode=TemplatedParent}" />
                                                <Binding Path="NodeModels" RelativeSource="{RelativeSource Mode=TemplatedParent}" />
                                                <Binding Path="ChildrenSelector"  RelativeSource="{RelativeSource Mode=TemplatedParent}" />
                                            </MultiBinding>
                                        </sb:SplitButton.ItemsSource>-->
                                                <sb:SplitButton.Content>
                                                    <icons:PackIconIonicons Kind="AddMD" />
                                                </sb:SplitButton.Content>
                                                <i:Interaction.Behaviors>
                                                    <!--  requies reset otherwise selected item feature doesn't work  -->
                                                    <b:ResetComboBoxOnOpenedBehavior />
                                                </i:Interaction.Behaviors>
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="SelectionChanged">
                                                        <i:CallMethodAction MethodName="AcceptComboTreeViewItem_Click" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                                        <b:InvokeCommandAction Command="{Binding AddCommand, RelativeSource={RelativeSource Mode=TemplatedParent}}" IgnoreNulls="True" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </sb:SplitButton>

                                            <Button x:Name="RemoveButton" Command="{TemplateBinding RemoveCommand}">
                                                <icons:PackIconIonicons Kind="RemoveiOS" />
                                            </Button>
                                            <!--<Button x:Name="AddParentButton" Command="{TemplateBinding AddParentCommand}">
                                        <icons:PackIconPixelartIcons Kind="AddBoxMultiple" />
                                    </Button>-->
                                            <ToggleButton x:Name="EditButton" IsChecked="{Binding IsEditing, RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                                <icons:PackIconFeatherIcons Kind="Edit2" />
                                            </ToggleButton>
                                        </WrapPanel>
                                    </Grid>
                                </Border>
                                <Border
                                    x:Name="EditBd"
                                    Grid.Column="1"
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Visibility="Collapsed">
                                    <Grid HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="24" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <ContentPresenter
                                            Grid.Column="1"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            ContentSource="Edit" />
                                        <ToggleButton
                                            x:Name="Edit2Button"
                                            Grid.Column="3"
                                            IsChecked="{Binding IsEditing, Converter={StaticResource InverseConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                            <icons:PackIconFeatherIcons Kind="Edit2" />
                                        </ToggleButton>
                                    </Grid>
                                </Border>

                                <ItemsPresenter
                                    x:Name="ItemsHost"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Visibility="{TemplateBinding ItemsPresenterVisibility}" />

                                <btns:PlusGeometryButton
                                    x:Name="PlusButton"
                                    Grid.Column="7"
                                    Width="16"
                                    Height="16"
                                    Margin="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                                <btns:MinusGeometryButton
                                    x:Name="MinusButton"
                                    Grid.Column="8"
                                    Width="16"
                                    Height="16"
                                    Margin="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="SelectionStates">
                                        <VisualState x:Name="Selected">
                                            <Storyboard>
                                                <ColorAnimationUsingKeyFrames Storyboard.TargetName="Bd" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                    <EasingColorKeyFrame KeyTime="0:0:0.3" Value="{StaticResource SelectedBackgroundColor}" />
                                                </ColorAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Unselected" />
                                        <VisualState x:Name="SelectedInactive">
                                            <Storyboard>
                                                <ColorAnimationUsingKeyFrames Storyboard.TargetName="Bd" Storyboard.TargetProperty="(Panel.Background).                     (SolidColorBrush.Color)">
                                                    <EasingColorKeyFrame KeyTime="0" Value="{StaticResource SelectedUnfocusedColor}" />
                                                </ColorAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                    <VisualStateGroup x:Name="ExpansionStates">
                                        <VisualState x:Name="Expanded">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ItemsHost" Storyboard.TargetProperty="(UIElement.Visibility)">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Collapsed" />
                                        <VisualState x:Name="MouseOver">
                                            <Storyboard>
                                                <ColorAnimationUsingKeyFrames Storyboard.TargetName="Bd" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                    <EasingColorKeyFrame KeyTime="0:0:0.3" Value="{c:Blue 2}" />
                                                </ColorAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="HasItems" Value="false">
                                    <Setter TargetName="Expander" Property="Visibility" Value="Hidden" />
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="HasHeader" Value="false" />
                                        <Condition Property="Width" Value="Auto" />
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="PART_Header" Property="MinWidth" Value="75" />
                                </MultiTrigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="HasHeader" Value="false" />
                                        <Condition Property="Height" Value="Auto" />
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="PART_Header" Property="MinHeight" Value="19" />
                                </MultiTrigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="h:MyTreeViewHelper.IsMouseDirectlyOverItem" Value="True" />
                                    </MultiTrigger.Conditions>

                                    <MultiTrigger.Setters>
                                        <Setter Property="IsShowing" Value="True" />
                                    </MultiTrigger.Setters>
                                </MultiTrigger>

                                <!--<MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="wpf:MyTreeViewHelper.IsMouseDirectlyOverItem"  Value="true" />
                                <Condition Property="IsEditable" Value="true" />
                            </MultiTrigger.Conditions>

                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="WrapPanel1">
                                        <DoubleAnimation To="1" Storyboard.TargetProperty="Opacity" Duration="0:0:0.2" />
                                -->
                                <!--<ObjectAnimationUsingKeyFrames  Duration="0:0:0" Storyboard.TargetProperty="Visibility">
                                            <ObjectAnimationUsingKeyFrames.KeyFrames>
                                                <DiscreteObjectKeyFrame Value="{x:Static Visibility.Visible}"></DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames.KeyFrames>
                                        </ObjectAnimationUsingKeyFrames>-->
                                <!--
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="WrapPanel1">
                                        <DoubleAnimation BeginTime="0:0:0" Storyboard.TargetProperty="Opacity"  To="0.5" Duration="0:0:0.1" />
                                -->
                                <!--<ObjectAnimationUsingKeyFrames Duration="0:0:0" Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.1">
                                            <ObjectAnimationUsingKeyFrames.KeyFrames>
                                                <DiscreteObjectKeyFrame Value="{x:Static Visibility.Collapsed}"></DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames.KeyFrames>
                                        </ObjectAnimationUsingKeyFrames>-->
                                <!--
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>-->
                                <Trigger Property="IsEditing" Value="True">
                                    <Setter TargetName="EditBd" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="Bd" Property="Visibility" Value="Collapsed" />
                                </Trigger>
                                <Trigger Property="IsHighlighted" Value="False">
                                    <Setter TargetName="PART_Header" Property="Opacity" Value="0.3" />
                                </Trigger>
                                <Trigger Property="IsHighlighted" Value="{x:Null}">
                                    <Setter TargetName="PART_Header" Property="Opacity" Value="0.8" />
                                </Trigger>
                                <Trigger Property="IsHighlighted" Value="True">
                                    <Setter TargetName="PART_Header" Property="Opacity" Value="1" />
                                </Trigger>

                                <Trigger Property="IsValid" Value="True">
                                    <Setter TargetName="Bd" Property="BorderBrush" Value="Green" />
                                    <Setter TargetName="Bd" Property="BorderThickness" Value="2" />
                                </Trigger>
                                <Trigger Property="IsValid" Value="{x:Null}">

                                    <Setter TargetName="Bd" Property="BorderThickness" Value="0" />
                                </Trigger>
                                <Trigger Property="IsValid" Value="False">
                                    <Setter TargetName="Bd" Property="BorderBrush" Value="Red" />
                                    <Setter TargetName="Bd" Property="BorderThickness" Value="2" />
                                </Trigger>

                                <!--<Trigger Property="IsDragging" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource Enter}" />
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard Storyboard="{StaticResource Exit}" />
                                </Trigger.ExitActions>
                            </Trigger>-->
                                <!--<Trigger Property="IsSelected" Value="True">
                                    <Trigger.EnterActions>

                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" Storyboard.TargetName="MainBorder" Duration="0:0:0.3">
                                                    <ColorAnimation.To>
                                                        <Color A="120" R="10" G="10" B="10" />
                                                    </ColorAnimation.To>
                                                </ColorAnimation>

                                -->
                                <!--<ThicknessAnimation Storyboard.TargetProperty="BorderThickness" To="2" Storyboard.TargetName="MainBorder" Duration="0:0:0.3">
                                        </ThicknessAnimation>
                                        <ThicknessAnimation Storyboard.TargetProperty="BorderThickness" To="1" Storyboard.TargetName="SecondaryBorder" Duration="0:0:0.3">
                                        </ThicknessAnimation>-->
                                <!--
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                -->
                                <!--<ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" Storyboard.TargetName="MainBorder" Duration="0:0:0.3">
                                            <ColorAnimation.To>
                                                <Color A="0" R="10" G="10" B="10" />
                                            </ColorAnimation.To>
                                        </ColorAnimation>-->
                                <!--<ThicknessAnimation Storyboard.TargetProperty="BorderThickness" To="1" Storyboard.TargetName="MainBorder" Duration="0:0:0.3">
                                        </ThicknessAnimation>
                                        <ThicknessAnimation Storyboard.TargetProperty="BorderThickness" To="1" Storyboard.TargetName="SecondaryBorder" Duration="0:0:0.3">
                                        </ThicknessAnimation>-->
                                <!--
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>-->

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="MainBorder"
                                                    Storyboard.TargetProperty="BorderBrush.Color"
                                                    Duration="0:0:0.3">
                                                    <ColorAnimation.To>
                                                        <Color
                                                            A="60"
                                                            B="10"
                                                            G="10"
                                                            R="40" />
                                                    </ColorAnimation.To>
                                                </ColorAnimation>
                                                <ColorAnimation
                                                    Storyboard.TargetName="MainBorder"
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    Duration="0:0:0.3">
                                                    <ColorAnimation.To>
                                                        <Color
                                                            A="20"
                                                            B="80"
                                                            G="30"
                                                            R="40" />
                                                    </ColorAnimation.To>
                                                </ColorAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="MainBorder"
                                                    Storyboard.TargetProperty="BorderBrush.Color"
                                                    To="Transparent"
                                                    Duration="0:0:0.3" />
                                                <ColorAnimation
                                                    Storyboard.TargetName="MainBorder"
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="Transparent"
