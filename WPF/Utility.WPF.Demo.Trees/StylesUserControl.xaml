<UserControl x:Class="Utility.WPF.Demo.Trees.StylesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:trees="http://schemas.utility.com/trees"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utility.WPF.Demo.Trees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type local:_Node}">
                <CheckBox IsChecked="{Binding IsEditable}"></CheckBox>
            </DataTemplate>
        </ResourceDictionary>
    </FrameworkElement.Resources>

    <DockPanel>

        <ItemsControl x:Name="ItemsControl">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding Command}" Content="{Binding Header}"></Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TreeView x:Name="MyTreeView" AlternationCount="{Binding RelativeSource={RelativeSource Self}, Path=Items.Count}"  >
            <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding Item2, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}">
                <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubItem1, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}"/>
                <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubItem2, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}"/>
            </trees:CustomTreeViewItem>
            <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding Item3, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}">
                <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubItem3, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}"/>
                <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubItem4, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}"/>
                <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubItem5, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}"/>
                <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubItem6, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}"/>
                <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubItem7, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}"/>
                <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubItem8, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}">
                    <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubSubItem1, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}"/>
                    <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubSubItem2, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}"/>
                    <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubSubItem3, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}"/>
                    <trees:CustomTreeViewItem Header="{Binding }" DataContext="{Binding SubSubItem4, RelativeSource={RelativeSource AncestorType=local:StylesUserControl}}"/>
                </trees:CustomTreeViewItem>
            </trees:CustomTreeViewItem>
        </TreeView>
    </DockPanel>

</UserControl>
