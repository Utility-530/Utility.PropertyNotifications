<UserControl x:Class="Utility.WPF.Demo.Trees.TabTreeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utility.WPF.Demo.Trees" 
             xmlns:tree="http://schemas.utility.com/trees"
             xmlns:math="http://hexinnovation.com/math"
             xmlns:node="clr-namespace:Utility.Nodes;assembly=Utility.Nodes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <FrameworkElement.DataContext>
        <local:TabsViewModel></local:TabsViewModel>
    </FrameworkElement.DataContext>


    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <Style x:Key="AddStyle" TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource TabControlStyle}">
                <Setter Property="tree:TreeTabHelper.AddItemCallback" Value="{x:Static local:TabsViewModel.AddItemCallback}"/>
                <Setter Property="tree:TreeTabHelper.Edit">
                    <Setter.Value>
                        <node:NodeViewModel></node:NodeViewModel>
                    </Setter.Value>
                </Setter>
                <Setter Property="tree:TreeTabHelper.EditTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <TextBox Text="{Binding Name}" Background="LightYellow" MinWidth="100" MinHeight="26"/>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <HierarchicalDataTemplate DataType="{x:Type node:NodeViewModel}" ItemsSource="{Binding Children}">
                <TextBlock Text="{Binding Name}" Background="Transparent">

                </TextBlock>
            </HierarchicalDataTemplate>
        </ResourceDictionary>
    </FrameworkElement.Resources>


    <UniformGrid Columns="1" >
        <TreeView x:Name="TabTree">
            <TreeViewItem Style="{StaticResource TabControlStyle}" >
                <TreeViewItem Header="Home" IsSelected="True">
                    <TreeViewItem Header="This is the Home tab content."/>
                </TreeViewItem>

                <TreeViewItem Header="Settings">
                    <TreeViewItem Header="Settings content here."/>
                </TreeViewItem>

                <TreeViewItem Header="About">
                    <TreeViewItem Header="About this app:" FontWeight="Bold"/>
                    <TreeViewItem >
                        <TreeViewItem.Header>
                            <Ellipse Fill="AliceBlue" Width="100" Height="100"/>
                        </TreeViewItem.Header>
                    </TreeViewItem>
                </TreeViewItem>

                <TreeViewItem Header="Logs">
                    <TreeViewItem Header="Log entries go here..."/>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>

        <TreeView ItemsSource="{Binding Collection}"  ItemContainerStyle="{StaticResource AddStyle}">
        </TreeView>
    </UniformGrid>

</UserControl>
