<UserControl x:Class="Utility.WPF.Demo.Trees.CustomSelectStyleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:trees="http://schemas.utility.com/trees"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Utility.WPF.Demo.Trees"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--<Style x:Key="DefaultStyle" TargetType="{x:Type trees:trees:CustomTreeViewItem}" BasedOn="{StaticResource {x:Type trees:trees:CustomTreeViewItem}}">
                --><!--<Setter Property="ChildrenSelector" Value="{StaticResource ChildrenSelector}" />--><!--
            </Style>-->
        </ResourceDictionary>
    </FrameworkElement.Resources>

    <DockPanel>

        <ItemsControl x:Name="ItemsControl">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding Command}" Content="{Binding Header}"></Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <trees:CustomTreeView x:Name="MyTreeView"
            AlternationCount="{Binding RelativeSource={RelativeSource Self}, Path=Items.Count}">
            <trees:CustomTreeViewItem Header="Item2">
                <trees:CustomTreeViewItem Header="SubItem1" />
                <trees:CustomTreeViewItem Header="SubItem2" />
            </trees:CustomTreeViewItem>
            <trees:CustomTreeViewItem Header="Item3">
                <trees:CustomTreeViewItem Header="SubItem3" />
                <trees:CustomTreeViewItem Header="SubItem4" />
                <trees:CustomTreeViewItem Header="SubItem5" />
                <trees:CustomTreeViewItem Header="SubItem6" />
                <trees:CustomTreeViewItem Header="SubItem7" />
                <trees:CustomTreeViewItem Header="SubItem8">
                    <trees:CustomTreeViewItem Header="SubSubItem1" />
                    <trees:CustomTreeViewItem Header="SubSubItem2" />
                    <trees:CustomTreeViewItem Header="SubSubItem3" />
                    <trees:CustomTreeViewItem Header="SubSubItem4" />
                </trees:CustomTreeViewItem>
            </trees:CustomTreeViewItem>
        </trees:CustomTreeView>
    </DockPanel>
</UserControl>