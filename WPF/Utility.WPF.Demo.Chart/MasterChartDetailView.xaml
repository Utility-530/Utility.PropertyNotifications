<UserControl
    x:Class="Utility.WPF.Demo.Chart.MasterChartDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Utility.WPF.Chart.Demo.ViewModels"
    xmlns:util="http://schemas.utility.com/markup"
    xmlns:chart="http://schemas.utility.com/chart"
    xmlns:drg="http://schemas.utility.com/dragablz"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <FrameworkElement.DataContext>
        <vm:ChartDetailsViewModel />
    </FrameworkElement.DataContext>

    <chart:MasterChartDetail x:Name="MasterDetail1"
                                   IdKey="{util:NameOf Type={x:Type vm:ChartDetailViewModel},Path=Id}"
                                   DataKey="{Binding DataKey, Mode=OneTime}">
            <drg:ListControl
                DisplayMemberPath="{util:NameOf Type={x:Type vm:ChartDetailViewModel}, Path=Id}"
            IsCheckedPath="{util:NameOf Type={x:Type vm:ChartDetailViewModel}, Path=IsChecked}"
            CommandPath="{util:NameOf Type={x:Type vm:ChartDetailViewModel}, Path=Command}"
            ItemsSource="{Binding Collection}">
            </drg:ListControl>
    </chart:MasterChartDetail>
</UserControl>