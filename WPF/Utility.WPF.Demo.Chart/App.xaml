<Application
    x:Class="Utility.WPF.Chart.Demo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:external="http://schemas.utility.com/external"
    xmlns:demo="clr-namespace:Utility.WPF.Chart.Demo.ViewModels" 
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type demo:ChartDetailViewModel}">
                <Grid>
                    <Ellipse Height="20" Width="20">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding Color}"></SolidColorBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <external:OutlinedTextBlock Text="{Binding Id}" StrokeThickness="3" Stroke="White"></external:OutlinedTextBlock>
                </Grid>
            </DataTemplate>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="/Utility.WPF.Demo.Data;component/Themes/Generic.xaml" />

                <!-- Use BundledTheme to choose Light or Dark -->
                <materialDesign:BundledTheme BaseTheme="Light"
                                 PrimaryColor="Grey"
                                 SecondaryColor="Lime" />

                <!-- Core MD‑3 styles -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />

                <!-- Color palette -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Grey.xaml" />

                <!-- Any other additional MD resource dictionaries -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Flipper.xaml" />


            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>