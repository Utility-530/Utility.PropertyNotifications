<UserControl x:Class="Utility.WPF.Demo.Colours.NativeColoursView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Utility.WPF.Demo.Colours"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="1000">

    <FrameworkElement.Resources>
        <Style TargetType="{x:Type Border}">
            <Setter Property="CornerRadius" Value="8" ></Setter>

            <Setter Property="BorderThickness" Value="2" ></Setter>
            <Setter Property="Margin" Value="1" ></Setter>
        </Style>
        <Storyboard x:Key="Storyboard1">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="stackPanel" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:10" Value="-2000" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Storyboard2">
            <Int32AnimationUsingKeyFrames Storyboard.TargetName="uniformGrid" Storyboard.TargetProperty="(UniformGrid.Rows)">
                <EasingInt32KeyFrame KeyTime="00:00:4" Value="5" />
            </Int32AnimationUsingKeyFrames>
            <Int32AnimationUsingKeyFrames Storyboard.TargetName="uniformGrid" Storyboard.TargetProperty="(UniformGrid.Columns)">
                <EasingInt32KeyFrame KeyTime="00:00:4" Value="5" />
            </Int32AnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Storyboard3">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:0.2" Value="{x:Static SystemColors.ActiveBorderColor}" />
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:0.4" Value="{x:Static SystemColors.ActiveCaptionColor}" />
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:0.6" Value="{x:Static SystemColors.ActiveCaptionTextColor}" />
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:0.8" Value="{x:Static SystemColors.AppWorkspaceColor}" />
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:1.0" Value="{x:Static SystemColors.GradientActiveCaptionColor}" />
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:1.2" Value="{x:Static SystemColors.InactiveBorderColor}" />
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:1.4" Value="{x:Static SystemColors.InactiveCaptionColor}" />
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:1.6" Value="{x:Static SystemColors.InactiveCaptionTextColor}" />
            </ColorAnimationUsingKeyFrames>
            <!--<ColorAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:0.9" Value="{x:Static SystemColors.InactiveSelectionHighlightColor}" />
            </ColorAnimationUsingKeyFrames>-->
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:1.8" Value="{x:Static SystemColors.InfoColor}" />
            </ColorAnimationUsingKeyFrames>
        </Storyboard>

        <!--<Style TargetType="{x:Type HeaderedContentControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type HeaderedContentControl}">
                        <StackPanel>
                            <Grid>
                                <ContentPresenter ContentSource="Header" ContentTemplate="{TemplateBinding HeaderTemplate}" />
                            </Grid>
                            <ContentPresenter />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <TextBlock FontWeight="DemiBold" Text="{Binding }" />
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>-->
    </FrameworkElement.Resources>
    <FrameworkElement.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource Storyboard1}" />
            <BeginStoryboard Storyboard="{StaticResource Storyboard2}" />
            <BeginStoryboard Storyboard="{StaticResource Storyboard3}" />
        </EventTrigger>
    </FrameworkElement.Triggers>

    <UniformGrid Rows="1">
        <Grid x:Name="grid" Background="Transparent">
            <Border>
                <TextBlock Text="{Binding ElementName=Light, Path=Background}"></TextBlock>
            </Border>
        </Grid>
        <UniformGrid x:Name="uniformGrid" Columns="1">
            <Border  Background="Bisque"></Border>
            <Border Background="AliceBlue"></Border>
            <Border Background="AntiqueWhite"></Border>
            <Border Background="Beige"></Border>
            <Border Background="Cornsilk"></Border>
            <Border Background="FloralWhite"></Border>
            <Border Background="Gainsboro"></Border>
            <Border Background="Honeydew"></Border>
            <Border Background="Lavender"></Border>
            <Border Background="LavenderBlush"></Border>
            <Border Background="LemonChiffon"></Border>
            <Border Background="LightBlue"></Border>
            <Border Background="LightGoldenrodYellow"></Border>
            <Border Background="LightGray"></Border>
            <Border Background="LightYellow"></Border>
            <Border Background="LightSteelBlue"></Border>
            <Border Background="Linen"></Border>
            <Border Background="MintCream"></Border>
            <Border Background="MistyRose"></Border>
            <Border Background="PowderBlue"></Border>
            <Border Background="Thistle"></Border>
            <Border Background="SeaShell"></Border>
            <Border Background="WhiteSmoke"></Border>
            <Border Background="Tan"></Border>
        </UniformGrid>
        <Ellipse></Ellipse>
        <UniformGrid Columns="1">

            <Border Background="BurlyWood"></Border>
            <Border Background="CadetBlue"></Border>
            <Border Background="CornflowerBlue"></Border>
            <Border Background="DarkKhaki"></Border>
            <Border Background="DarkSalmon"></Border>
            <Border Background="DarkSeaGreen"></Border>
            <Border Background="DarkTurquoise"></Border>
            <Border Background="IndianRed"></Border>
            <Border Background="LightCoral"></Border>
            <Border Background="LightGreen"></Border>
            <Border Background="LightPink"></Border>
            <Border Background="LightSalmon"></Border>
            <Border Background="LightSeaGreen"></Border>
            <Border Background="LightSkyBlue"></Border>
            <Border Background="LightSlateGray"></Border>
            <Border Background="MediumAquamarine"></Border>
            <Border Background="MediumOrchid"></Border>
            <Border Background="MediumPurple"></Border>
            <Border Background="MediumSlateBlue"></Border>
            <Border Background="MediumTurquoise"></Border>
            <Border Background="PaleVioletRed"></Border>
            <Border Background="Pink"></Border>
            <Border Background="Plum"></Border>
            <Border Background="RosyBrown"></Border>
            <Border Background="Salmon"></Border>
            <Border Background="SandyBrown"></Border>
            <Border Background="SeaGreen"></Border>
            <Border Background="SkyBlue"></Border>
            <Border Background="SlateGray"></Border>
            <Border Background="SteelBlue"></Border>
        </UniformGrid>
        <UniformGrid x:Name="stackPanel" RenderTransformOrigin="0.5,0.5" Height="2000" Columns="1">
            <FrameworkElement.Resources>
                <Style TargetType="{x:Type Rectangle}">
                    <Setter Property="Height" Value="200"></Setter>
                </Style>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Height" Value="200"></Setter>
                </Style>
            </FrameworkElement.Resources>
            <Panel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Panel.RenderTransform>
            <Border Background="BurlyWood" ></Border>
            <Border Background="CadetBlue"></Border>
            <Border Background="CornflowerBlue" ></Border>
            <Border Background="DarkKhaki"></Border>
            <Border Background="DarkSalmon"></Border>
            <Border Background="DarkSeaGreen"></Border>
            <Border Background="DarkTurquoise"></Border>
            <Border Background="IndianRed"></Border>
            <Border Background="LightCoral"></Border>
            <Border Background="LightGreen"></Border>
            <Border Background="LightPink"></Border>
            <Border Background="LightSalmon"></Border>
            <Border Background="LightSeaGreen"></Border>
            <Border Background="LightSkyBlue"></Border>
            <Border Background="LightSlateGray"></Border>
            <Border Background="MediumAquamarine"></Border>
            <Border Background="MediumOrchid"></Border>
            <Border Background="MediumPurple"></Border>
            <Border Background="MediumSlateBlue"></Border>
            <Border Background="MediumTurquoise"></Border>
            <Border Background="PaleVioletRed"></Border>
            <Border Background="Pink"></Border>
            <Border Background="Plum"></Border>
            <Border Background="RosyBrown"></Border>
            <Border Background="Salmon"></Border>
            <Border Background="SandyBrown"></Border>
            <Border Background="SeaGreen"></Border>
            <Border Background="SkyBlue"></Border>
            <Border Background="SlateGray"></Border>
            <Border Background="SteelBlue"></Border>
        </UniformGrid>
    </UniformGrid>
</UserControl>