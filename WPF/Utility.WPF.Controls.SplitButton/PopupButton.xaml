<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Utility.WPF.Controls.SplitButtons">

    <Style TargetType="{x:Type local:PopupButton}">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="BorderBrush" Value="DarkBlue"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="PopupPlacement" Value="Top"/>
        <Setter Property="StaysOpen" Value="False"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PopupButton}">
                    <Grid>
                        <!-- Toggle Button -->
                        <ToggleButton x:Name="PART_ToggleButton"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}"
                                    IsChecked="{Binding IsPopupOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">

                                
                            <ContentPresenter ContentSource="Header" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </ToggleButton>

                        <!-- Popup -->
                        <Popup x:Name="PART_Popup"
                               IsOpen="{Binding IsPopupOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               PlacementTarget="{Binding ElementName=PART_ToggleButton}"
                               Placement="{TemplateBinding PopupPlacement}"
                               StaysOpen="{TemplateBinding StaysOpen}"
                               AllowsTransparency="True"
                               PopupAnimation="Slide">

                            <Border Background="White"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Margin="5"
                                    Effect="{DynamicResource PopupDropShadowEffect}">

                                <ContentPresenter Content="{TemplateBinding Content}"
                                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                                Margin="10"/>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Drop Shadow Effect Resource -->
    <DropShadowEffect x:Key="PopupDropShadowEffect" 
                      BlurRadius="8" 
                      ShadowDepth="2" 
                      Opacity="0.3" 
                      Color="Black"/>

</ResourceDictionary>
