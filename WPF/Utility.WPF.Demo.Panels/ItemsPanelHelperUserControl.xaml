<UserControl x:Class="Utility.WPF.Demo.Panels.ItemsPanelHelperUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utility.WPF.Demo.Panels"
             xmlns:controls="http://schemas.utility.com" 
             xmlns:beh="http://schemas.utility.com/behaviors"
             xmlns:enums="clr-namespace:Utility.Enums;assembly=Utility.Enums"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:att="http://schemas.utility.com/attached"
             xmlns:list="utility" 
             xmlns:lsts="http://schemas.utility.com/lists"
             xmlns:custom="clr-namespace:CustomPanels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <UniformGrid Rows="1" Height="30" DockPanel.Dock="Top">
            <ComboBox>
                <i:Interaction.Behaviors>
                    <beh:EnumComboBehavior x:Name="OrientationBehavior" 
                                           EnumType="{x:Type enums:Orientation}" 
                                           Value="{x:Static enums:Orientation.Horizontal}"
                                           />
                </i:Interaction.Behaviors>
            </ComboBox>
            <ComboBox>
                <i:Interaction.Behaviors>
                    <beh:EnumComboBehavior x:Name="ArrangementBehavior"
                                           EnumType="{x:Type enums:Arrangement}" 
                                           Value="{x:Static enums:Arrangement.MasterSlave}"/>
                </i:Interaction.Behaviors>
            </ComboBox>
            <lsts:CustomSelector>

            </lsts:CustomSelector>
        </UniformGrid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Example 1: First item on Left -->
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5">
                <Grid>
                    <TextBlock Text="First Item: Left" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Top" 
                          Margin="5" 
                          FontWeight="Bold"/>

                    <ItemsControl >
                        <ItemsControl.Style>
                            <Style TargetType="ItemsControl">
                                <!--<Setter Property="att:ItemsPanelHelpers.Rows" Value="{Binding Rows, Mode=TwoWay}" />
                                <Setter Property="att:ItemsPanelHelpers.Columns" Value="{Binding Columns, Mode=TwoWay}" />-->
                                <Setter Property="att:ItemsPanelHelpers.Orientation" Value="{Binding Value, ElementName=OrientationBehavior, Mode=TwoWay}" />
                                <Setter Property="att:ItemsPanelHelpers.Arrangement" Value="{Binding Value, ElementName=ArrangementBehavior, Mode=TwoWay}" />
                            </Style>
                        </ItemsControl.Style>
                        <Button Content="First" Width="100" Height="50" Background="LightCoral"/>
                        <Button Content="2" Width="8" Height="14" Background="LightBlue"/>
                        <Button Content="3" Width="80" Height="20" Background="LightGreen"/>
                        <Button Content="4" Width="48" Height="10" Background="LightYellow"/>
                        <Button Content="5" Width="28" Height="150" Background="Lavender"/>
                    </ItemsControl>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
                <Grid>
                    <TextBlock Text="First Item: Left" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top" 
                        Margin="5" 
                        FontWeight="Bold"/>

                    <ItemsControl >
                        <ItemsControl.Style>
                            <Style TargetType="ItemsControl">
                                <!--<Setter Property="att:ItemsPanelHelpers.Rows" Value="{Binding Rows, Mode=TwoWay}" />
                              <Setter Property="att:ItemsPanelHelpers.Columns" Value="{Binding Columns, Mode=TwoWay}" />-->
                                <Setter Property="att:ItemsPanelHelpers.Orientation" Value="{Binding Value, ElementName=OrientationBehavior, Mode=TwoWay}" />
                                <Setter Property="att:ItemsPanelHelpers.Arrangement" Value="{Binding Value, ElementName=ArrangementBehavior, Mode=TwoWay}" />
                            </Style>
                        </ItemsControl.Style>
                        <Button Content="First" Width="100" Height="50" Background="LightCoral"/>
                        <Button Content="2" Width="28" Height="14" Background="LightBlue"/>
                        <Button Content="3" Width="80" Height="20" Background="LightGreen"/>
                        <Button Content="4" Width="180" Height="10" Background="LightYellow"/>
                        <Button Content="5" Width="28" Height="25" Background="Lavender"/>
                    </ItemsControl>
                </Grid>
            </Border>
            <!-- Example 2: First item on Right --><!--
            <Border Grid.Row="0" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
                <Grid>
                    <TextBlock Text="First Item: Right" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Top" 
                          Margin="5" 
                          FontWeight="Bold"/>

                    <custom:MasterSlavePanel MasterPosition="Right">
                        <Button Content="First" Width="100" Height="50" Background="LightCoral"/>
                        <Button Content="2" Width="28" Height="14" Background="LightBlue"/>
                        <Button Content="3" Width="80" Height="20" Background="LightGreen"/>
                        <Button Content="4" Width="180" Height="10" Background="LightYellow"/>
                        <Button Content="5" Width="28" Height="25" Background="Lavender"/>
                    </custom:MasterSlavePanel>
                </Grid>
            </Border>

            --><!-- Example 3: First item on Top --><!--
            <Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5">
                <Grid>
                    <TextBlock Text="First Item: Top" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Top" 
                          Margin="5" 
                          FontWeight="Bold"/>

                    <custom:MasterSlavePanel MasterPosition="Top">
                        <Button Content="First" Width="210" Height="250" Background="LightCoral"/>
                        <Button Content="2" Width="8" Height="140" Background="LightBlue"/>
                        <Button Content="3" Width="80" Height="10" Background="LightGreen"/>
                        <Button Content="4" Width="100" Height="10" Background="LightYellow"/>
                        <Button Content="5" Width="80" Height="50" Background="Lavender"/>
                    </custom:MasterSlavePanel>
                </Grid>
            </Border>

            --><!-- Example 4: First item on Bottom --><!--
            <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
                <Grid>
                    <TextBlock Text="First Item: Bottom" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Top" 
                          Margin="5" 
                          FontWeight="Bold"/>

                    <custom:MasterSlavePanel MasterPosition="Bottom" >
                        <Button Content="First" Width="100" Height="80" Background="LightCoral"/>
                        <Button Content="2" Width="28" Height="10" Background="LightBlue"/>
                        <Button Content="3" Width="28" Height="22" Background="LightGreen"/>
                        <Button Content="4" Width="10" Height="10" Background="LightYellow"/>
                        <Button Content="5" Width="28" Height="50" Background="Lavender"/>
                    </custom:MasterSlavePanel>
                </Grid>
            </Border>-->
        </Grid>
    </DockPanel>
</UserControl>
