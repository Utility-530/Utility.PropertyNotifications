    <Style TargetType="{x:Type local:HtmlControl}" BasedOn="{StaticResource {x:Type base:SplitControl}}">
        <Setter Property="Content">
            <Setter.Value>
                <wpf1:HtmlPanel x:Name="_htmlPanel">
                    <wpf1:HtmlPanel.ToolTip>
                        <ToolTip BorderBrush="Transparent" Padding="0">
                            <wpf1:HtmlLabel x:Name="_htmlTooltipLabel" />
                        </ToolTip>
                    </wpf1:HtmlPanel.ToolTip>
                </wpf1:HtmlPanel>
            </Setter.Value>
        </Setter>
        <Setter Property="Header">
            <Setter.Value>
                <WebBrowser x:Name="_webBrowser" />
            </Setter.Value>
        </Setter>
