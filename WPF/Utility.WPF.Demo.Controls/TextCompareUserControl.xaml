<UserControl
    x:Class="Utility.WPF.Demo.View.TextCompareUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Utility.WPF.Demo.Data.Model;assembly=Utility.WPF.Demo.Data"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:util="http://schemas.utility.com"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="20"
    mc:Ignorable="d">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <model:Text x:Key="Text" />
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Margin="10" Text="Main Text" />

        <TextBox
            x:Name="MainTextBox"
            Grid.Column="1"
            MinHeight="50"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AcceptsReturn="True"
            Text="{Binding Source={StaticResource Text}, Path=Value, Mode=OneTime}"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="1"
            Margin="10"
            Background="{Binding ElementName=HighlightingTextBlock, Path=HighlightBackground2}"
            Text="Highlight Text" />

        <TextBox
            x:Name="HighlightTextBox"
            Grid.Row="1"
            Grid.Column="1"
            MinWidth="200"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding Source={StaticResource Text}, Path=Value, Mode=OneTime}" />

        <TextBlock
            Grid.Row="2"
            Margin="10"
            Text="Compare" />

        <util:CompareTextBlock
            x:Name="CompareTextBlock"
            Grid.Row="2"
            Grid.Column="1"
            Margin="10"
            CompareText="{Binding ElementName=HighlightTextBox, Path=Text}"
            Text="{Binding ElementName=MainTextBox, Path=Text}"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="2"
            Margin="10">
            <Run Text="# of additions" />
            <Run Text="{Binding ElementName=CompareTextBlock, Path=AdditionsCount, Mode=OneWay}" />
            <!--<Run Text="{Binding ElementName=HighlightingTextBlock, Path=SubtractionsCount, Mode=OneWay}" />-->
        </TextBlock>

        <TextBlock
            Grid.Row="3"
            Margin="10"
            Text="Match" />

        <util:HighlightingTextBlock
            x:Name="HighlightingTextBlock"
            Grid.Row="3"
            Grid.Column="1"
            Margin="10"
            CompareText="{Binding ElementName=HighlightTextBox, Path=Text}"
            Text="{Binding ElementName=MainTextBox, Path=Text}"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="2"
            Margin="10">
            <Run Text="# of additions" />
            <Run Text="{Binding ElementName=HighlightingTextBlock, Path=AdditionsCount, Mode=OneWay}" />
            <!--<Run Text="{Binding ElementName=HighlightingTextBlock, Path=SubtractionsCount, Mode=OneWay}" />-->
        </TextBlock>
    </Grid>
</UserControl>