<UserControl
    x:Class="Utility.WPF.Demo.View.SpinnerUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="http://schemas.utility.com"
    xmlns:local="clr-namespace:Utility.WPF.Demo.View"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <FrameworkElement.DataContext>
        <local:SpinnerViewModel />
    </FrameworkElement.DataContext>

    <UniformGrid Columns="1">
        <WrapPanel>
            <view:SpinnerControl Width="200" Value="{Binding Value}" />
            <view:SpinnerControl Height="200" Width="30" />
            <view:SpinnerControl Width="30" />
            <view:SpinnerControl Height="100" />
            <view:SpinnerControl Height="30" />
        </WrapPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <view:TimeSpanControl
                x:Name="TimeSpanControl1"
                Width="300"
                Height="50">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="ValueChanged">
                        <i:ChangePropertyAction TargetObject="{Binding ElementName=oc}" Value="{Binding ElementName=TimeSpanControl1, Path=Value}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </view:TimeSpanControl>

            <ContentControl
                x:Name="oc"
                Margin="20"
                VerticalAlignment="Center" />
        </StackPanel>

        <UniformGrid
            x:Name="Root"
            Margin="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <view:ShortTimeSpanControl x:Name="shortTimeSpanControl1" Width="300" />

            <TextBlock
                x:Name="label1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30"
                Text="{Binding Value, ElementName=shortTimeSpanControl1}" />

            <Button
                Name="button1"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="button1_Click"
                Content="Reset" />
        </UniformGrid>
    </UniformGrid>
</UserControl>