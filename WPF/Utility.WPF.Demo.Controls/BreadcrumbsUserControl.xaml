<UserControl x:Class="Utility.WPF.Demo.Controls.BreadcrumbsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utility.WPF.Demo.Controls"
             xmlns:r="clr-namespace:System.Reactive.Linq;assembly=System.Reactive"
             xmlns:conv="http://schemas.utility.com/converters"
             xmlns:controls="http://schemas.utility.com"
             d:Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    <UniformGrid Columns="1" Height="30" Width="400">
        <controls:BreadCrumbs
            ItemsSource="{Binding Source={x:Type r:Observable}, Converter={x:Static conv:TypeHierarchyConverter.Instance}}">
        </controls:BreadCrumbs>
    </UniformGrid>
</UserControl>
