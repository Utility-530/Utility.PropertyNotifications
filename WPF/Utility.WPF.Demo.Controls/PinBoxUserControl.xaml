<UserControl x:Class="Utility.WPF.Demo.Controls.PinBoxUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Utility.WPF.Controls;assembly=Utility.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <FrameworkElement.Resources>
        <!-- PinBox Style -->
        <Style TargetType="{x:Type controls:PinBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:PinBox}">
                        <Border
                            Width="{TemplateBinding Width}"
                            HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border
                                    Grid.Column="0"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Background="White">
                                    <TextBox
                                        x:Name="PART_PinDigit1"
                                        MaxLength="1"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="32"
                                        FontWeight="Bold"
                                        Foreground="#333333" />
                                </Border>

                                <Border
                                    Grid.Column="2"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Background="White">
                                    <TextBox
                                        x:Name="PART_PinDigit2"
                                        MaxLength="1"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="32"
                                        FontWeight="Bold"
                                        Foreground="#333333" />
                                </Border>

                                <Border
                                    Grid.Column="4"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Background="White">
                                    <TextBox
                                        x:Name="PART_PinDigit3"
                                        MaxLength="1"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="32"
                                        FontWeight="Bold"
                                        Foreground="#333333" />
                                </Border>

                                <Border
                                    Grid.Column="6"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Background="White">
                                    <TextBox
                                        x:Name="PART_PinDigit4"
                                        MaxLength="1"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="32"
                                        FontWeight="Bold"
                                        Foreground="#333333" />
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger SourceName="PART_PinDigit1" Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" Value="#667EEA" />
                            </Trigger>
                            <Trigger SourceName="PART_PinDigit2" Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" Value="#667EEA" />
                            </Trigger>
                            <Trigger SourceName="PART_PinDigit3" Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" Value="#667EEA" />
                            </Trigger>
                            <Trigger SourceName="PART_PinDigit4" Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" Value="#667EEA" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Focusable" Value="True" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="60" />
        </Style>

        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#667EEA"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5568D3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ClearButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </FrameworkElement.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#667EEA" Padding="30,40">
            <StackPanel>
                <TextBlock Text="Enter PIN Code" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Please enter your 4-digit PIN" 
                           FontSize="14" 
                           Foreground="#E0E0FF"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">

                <!-- PIN Input -->
                <Border Background="White" 
                        CornerRadius="12" 
                        Padding="30,25"
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#DDDDDD" 
                                        Direction="270" 
                                        ShadowDepth="2" 
                                        BlurRadius="10" 
                                        Opacity="0.3"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="PIN CODE" 
                                   FontSize="11" 
                                   FontWeight="SemiBold"
                                   Foreground="#999999"
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Center"/>

                        <controls:PinBox x:Name="PinBoxControl" 
                                     Width="300" 
                                     Height="60"
                                     HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Result Display -->
                <Border Background="White" 
                        CornerRadius="12" 
                        Padding="25,20"
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#DDDDDD" 
                                        Direction="270" 
                                        ShadowDepth="2" 
                                        BlurRadius="10" 
                                        Opacity="0.3"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="ENTERED PIN" 
                                   FontSize="11" 
                                   FontWeight="SemiBold"
                                   Foreground="#999999"
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>

                        <TextBlock x:Name="ResultText" 
                                   Text="----" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#667EEA"
                                   FontFamily="Courier New"
                                   HorizontalAlignment="Center"
                                   />
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="Clear" 
                            Style="{StaticResource ClearButton}"
                            Click="ClearButton_Click"
                            Height="45"/>

                    <Button Grid.Column="2" 
                            x:Name="VerifyButton"
                            Content="Verify PIN" 
                            Style="{StaticResource ModernButton}"
                            Click="VerifyButton_Click"
                            IsEnabled="False"
                            Height="45"/>
                </Grid>

                <!-- Status Message -->
                <Border x:Name="MessageBorder" 
                        Background="#D4EDDA" 
                        CornerRadius="8" 
                        Padding="15"
                        Visibility="Collapsed">
                    <TextBlock x:Name="MessageText" 
                               Text="✓ PIN verified successfully!" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#155724"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Features Info -->
                <Border Background="White" 
                        CornerRadius="12" 
                        Padding="20"
                        Margin="0,20,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#DDDDDD" 
                                        Direction="270" 
                                        ShadowDepth="2" 
                                        BlurRadius="10" 
                                        Opacity="0.3"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="FEATURES" 
                                   FontSize="11" 
                                   FontWeight="SemiBold"
                                   Foreground="#999999"
                                   Margin="0,0,0,12"/>

                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="13" 
                                   Foreground="#666666"
                                   LineHeight="22">
                            <Run Text="• Auto-advance to next digit"/>
                            <LineBreak/>
                            <Run Text="• Backspace navigates to previous"/>
                            <LineBreak/>
                            <Run Text="• Arrow keys for navigation"/>
                            <LineBreak/>
                            <Run Text="• Numbers only (0-9)"/>
                            <LineBreak/>
                            <Run Text="• Paste 4-digit PIN with Ctrl+V"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
