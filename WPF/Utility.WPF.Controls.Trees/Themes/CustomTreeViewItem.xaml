                                            <Binding Path="IsRemovable" RelativeSource="{RelativeSource Mode=TemplatedParent}" />
                                            <Binding Path="IsEditing" RelativeSource="{RelativeSource Mode=TemplatedParent}" />
                                        </MultiBinding>
                                    </pnls:UniformStackPanel.Visibility>

                                    <sb:SplitButton
