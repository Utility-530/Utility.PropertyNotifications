                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="MainBorder"
                                            Storyboard.TargetProperty="BorderBrush.Color"
                                            To="CadetBlue"
                                            Duration="0:0:0.3" />
                                        <ColorAnimation
