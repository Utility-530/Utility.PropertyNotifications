                                            <EasingColorKeyFrame KeyTime="0:0:0.3" Value="{c:Blue 2}" />
                                        </ColorAnimationUsingKeyFrames>


                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>

