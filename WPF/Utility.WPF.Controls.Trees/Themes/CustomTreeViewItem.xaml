                                        Width="24"
                                        IsChecked="{Binding IsEditing, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                        Visibility="{TemplateBinding IsEditable,
                                                                     Converter={StaticResource VisibilityConverter},
                                                                     ConverterParameter=ss}">
                                        <icons:PackIconFeatherIcons Kind="Edit2" />
                                    </ToggleButton>
