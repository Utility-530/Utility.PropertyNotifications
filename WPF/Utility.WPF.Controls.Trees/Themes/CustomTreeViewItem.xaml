                                                <TextBlock Text="{TemplateBinding Title}" Visibility="{Binding Title, Converter={StaticResource NullToInverseVisibilityConverter}}" />

                                                <ContentPresenter
                                                    x:Name="PART_Header"
                                                    Grid.Row="1"
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
