<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WPF.Connectors="clr-namespace:Utility.WPF.Trees.Connectors;assembly=Utility.WPF.Trees.Connectors"
    xmlns:b="http://schemas.utility.com/behaviors"
    xmlns:btns="http://schemas.utility.com/buttons"
    xmlns:c="http://schemas.utility.com/colours"
    xmlns:conv="http://schemas.utility.com/converters"
    xmlns:enums="clr-namespace:Utility.Enums;assembly=Utility.Enums"
    xmlns:h="clr-namespace:Utility.WPF.Helpers;assembly=Utility.WPF.Helpers"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Utility.WPF.Controls.Trees"
    xmlns:pnls="http://schemas.utility.com/panels"
    xmlns:res="http://schemas.utility.com/resourcedictionary"
    xmlns:sb="http://schemas.utility.com/splitbuttons"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime">

    <ResourceDictionary.MergedDictionaries>
        <res:SharedResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/Shared.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <Storyboard x:Key="Enter">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleX">
            <EasingDoubleKeyFrame
                EasingFunction="{StaticResource Ease}"
                KeyTime="0:0:0.3"
                Value="1.02" />
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleY">
            <EasingDoubleKeyFrame
                EasingFunction="{StaticResource Ease}"
                KeyTime="0:0:0.3"
                Value="1.02" />
        </DoubleAnimationUsingKeyFrames>

        <ThicknessAnimation
            Storyboard.TargetName="TertiaryBorder"
            Storyboard.TargetProperty="BorderThickness"
            To="3"
            Duration="0:0:0.3" />
        <Storyboard>
            <ColorAnimation
                Storyboard.TargetName="TertiaryBorder"
                Storyboard.TargetProperty="BorderBrush.Color"
                Duration="0:0:0.3">
                <ColorAnimation.To>
                    <Color
                        A="90"
                        B="10"
                        G="40"
                        R="40" />
                </ColorAnimation.To>
            </ColorAnimation>
        </Storyboard>
    </Storyboard>

    <Storyboard x:Key="Exit">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleX">
            <EasingDoubleKeyFrame
                EasingFunction="{StaticResource Ease}"
                KeyTime="0:0:0.3"
                Value="1" />
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleY">
            <EasingDoubleKeyFrame
                EasingFunction="{StaticResource Ease}"
                KeyTime="0:0:0.3"
                Value="1" />
        </DoubleAnimationUsingKeyFrames>
        <ThicknessAnimation
            Storyboard.TargetName="TertiaryBorder"
            Storyboard.TargetProperty="BorderThickness"
            To="0"
            Duration="0:0:0.3" />
        <Storyboard>
            <ColorAnimation
                Storyboard.TargetName="TertiaryBorder"
                Storyboard.TargetProperty="BorderBrush.Color"
                Duration="0:0:0.3">
                <ColorAnimation.To>
                    <Color
                        A="00"
                        B="10"
                        G="40"
                        R="40" />
                </ColorAnimation.To>
            </ColorAnimation>
        </Storyboard>
    </Storyboard>

    <conv:OrientationConverter x:Key="OrientationConverter" />
    <conv:NullToInverseVisibilityConverter x:Key="NullToInverseVisibilityConverter" />
    <conv:IfConverter x:Key="IfConverter" />
    <conv:CountToBooleanConverter
        x:Key="ItemsToVisibilityConverter"
        Comparison="&gt;"
        FalseValue="{x:Static Visibility.Collapsed}"
        TrueValue="{x:Static Visibility.Visible}" />

    <Style x:Key="{x:Type local:CustomTreeViewItem}" TargetType="{x:Type local:CustomTreeViewItem}">
        <Setter Property="IsExpanded" Value="{Binding Path=IsExpanded, Mode=TwoWay}" />
        <Setter Property="IsValid" Value="{Binding Path=IsValid, Mode=TwoWay}" />
        <Setter Property="IsEditable" Value="{Binding Path=IsEditable, Mode=TwoWay}" />
        <Setter Property="IsAugmentable" Value="{Binding Path=IsAugmentable, Mode=TwoWay}" />
        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
        <Setter Property="IsReplicable" Value="{Binding IsReplicable, Mode=TwoWay}" />
        <Setter Property="IsRemovable" Value="{Binding IsRemovable, Mode=TwoWay}" />
        <Setter Property="AddCommand" Value="{Binding Path=AddCommand}" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="ConnectorPosition" Value="{Binding ConnectorPosition}" />
        <Setter Property="RemoveCommand" Value="{Binding Path=RemoveCommand}" />
        <Setter Property="AddParentCommand" Value="{Binding Path=AddParentCommand}" />
        <Setter Property="IsHighlighted" Value="{Binding Path=IsHighlighted}" />
        <Setter Property="Arrangement" Value="{Binding Path=Arrangement}" />
        <Setter Property="Visibility" Value="{Binding Path=IsVisible, Converter={StaticResource VisibilityConverter}}" />
        <Setter Property="ContentVisibility" Value="{Binding Path=IsContentVisible, Converter={StaticResource VisibilityConverter}}" />
        <Setter Property="Orientation" Value="{Binding Orientation, Converter={StaticResource OrientationConverter}}" />
        <Setter Property="Grid.Row" Value="{Binding Row}" />
        <Setter Property="Grid.Column" Value="{Binding Column}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="HorizontalContentAlignment" Value="{Binding Path=HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
        <Setter Property="VerticalContentAlignment" Value="{Binding Path=VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
        <Setter Property="Padding" Value="1,0,0,0" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
        <Setter Property="FocusVisualStyle" Value="{StaticResource TreeViewItemFocusVisual}" />
        <Setter Property="ItemsPanelTemplate" Value="{Binding ItemsPanelTemplate}" />
        <Setter Property="Rows" Value="{Binding Rows}" />
        <Setter Property="Columns" Value="{Binding Columns}" />
        <Setter Property="Errors" Value="{Binding Errors}" />
        <Setter Property="Title" Value="{Binding Title}" />
        <Setter Property="Height" Value="{Binding Size, Converter={StaticResource SizeConverter}, ConverterParameter='Height'}" />
        <Setter Property="Width" Value="{Binding Size, Converter={StaticResource SizeConverter}, ConverterParameter='Width'}" />
        <Setter Property="IsEnabled" Value="{Binding IsEnabled}" />
        <Setter Property="Tag">
            <Setter.Value>
                <MultiBinding Converter="{StaticResource RowColumnConverter}">
                    <Binding Path="Rows" RelativeSource="{RelativeSource Mode=Self}" />
                    <Binding Path="Columns" RelativeSource="{RelativeSource Mode=Self}" />
                </MultiBinding>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <MultiBinding Converter="{StaticResource MultiItemsPanelConverter}">
                    <Binding Path="ItemsPanelTemplate" RelativeSource="{RelativeSource Mode=Self}" />
                    <Binding Path="Arrangement" RelativeSource="{RelativeSource Mode=Self}" />
                    <Binding Path="Orientation" RelativeSource="{RelativeSource Mode=Self}" />
                    <Binding Path="Tag" RelativeSource="{RelativeSource Mode=Self}" />
                </MultiBinding>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
