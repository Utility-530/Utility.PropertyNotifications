                            <local:ChangeBehavior></local:ChangeBehavior>
                        </i:Interaction.Behaviors>-->
        <!--
                    </obj:JsonControl>-->
        <!--</Grid>-->
        <!--
                <local:PropertyTree Object="{Binding Path=.}"></local:PropertyTree>
            </DataTemplate>
        </Style.Resources>-->
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <ext:DraggAnimatedPanel
                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type local:CustomTreeViewItem}}}"
                        Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type local:CustomTreeViewItem}}}"
