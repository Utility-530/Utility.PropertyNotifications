            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CustomTreeViewItem}">
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <!--<RowDefinition Height="*"></RowDefinition>-->
                        </Grid.RowDefinitions>
                        <!--<ToggleButton x:Name="ToggleButton"
                        Template="{StaticResource ComboBoxToggleButton}"
                        Grid.Column="2"
                        Focusable="false"
                        ClickMode="Press"
                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay,
              RelativeSource={RelativeSource TemplatedParent}}"/>-->





                        <Grid
                            x:Name="DropDown"
                            Grid.Row="1"
                            MinWidth="{Binding ActualWidth}"
                            VerticalAlignment="Top"
                            SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--<Border x:Name="DropDownBorder"
                      BorderThickness="1">
                                <Border.BorderBrush>
                                    <SolidColorBrush Color="{DynamicResource BorderMediumColor}" />
                                </Border.BorderBrush>
                                <Border.Background>
                                    <SolidColorBrush Color="{DynamicResource ControlLightColor}" />
                                </Border.Background>
                            </Border>-->

                            <!--<ScrollViewer Margin="4,6,4,6" VerticalScrollBarVisibility="Visible"
                                          SnapsToDevicePixels="True">
                                <ItemsPresenter x:Name="ItemsHost"
                                                KeyboardNavigation.DirectionalNavigation="Contained" />
                            </ScrollViewer>-->
                            <ext:AnimatedScrollViewer
                                x:Name="PART_AnimatedScrollViewer"
                                Padding="{TemplateBinding Padding}"
                                CanKeyboardScroll="False"
                                Focusable="false"
                                ScrollingSpline="0,0.50,0.50,1">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </ext:AnimatedScrollViewer>

                            <Border
                                x:Name="Border"
                                Grid.Row="1"
                                Margin="4"
                                Background="LightGray">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition x:Name="row1" Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <ContentControl
                                        x:Name="content_control"
                                        Content="{TemplateBinding Edit}"
                                        ContentTemplate="{TemplateBinding EditTemplate}"
                                        ContentTemplateSelector="{TemplateBinding EditTemplateSelector}">
                                        <FrameworkElement.Style>
                                            <Style TargetType="{x:Type ContentControl}">
                                                <Setter Property="Opacity" Value="0" />
                                                <Style.Triggers>
                                                    <!--<DataTrigger Binding="{Binding ElementName=PlusButton, Path=IsChecked}" Value="False">
                                                                <Setter Property="Opacity" Value="0.5" />
                                                                </DataTrigger>-->
                                                    <DataTrigger Binding="{Binding ElementName=PlusButton, Path=IsChecked}" Value="False">
                                                        <!--<Setter Property="Height" Value="0" />-->
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="Opacity"
                                                                        To="0"
                                                                        Duration="0:0:0.1" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </FrameworkElement.Style>
                                    </ContentControl>

                                    <btns:GeometryToggleButton
                                        x:Name="PlusButton"
                                        Grid.Row="1"
                                        Width="{Binding ElementName=Border, Path=ActualWidth}"
                                        Margin="2"
                                        Padding="2"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Data="{StaticResource Plus}"
                                        Foreground="Black">
                                        <FrameworkElement.Style>
                                            <Style TargetType="{x:Type btns:GeometryToggleButton}">
                                                <Style.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter Property="Height" Value="0" />
                                                        <Setter Property="Width" Value="0" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter Property="Height" Value="24" />
                                                        <Setter Property="Width" Value="24" />
                                                    </Trigger>


                                                </Style.Triggers>
                                            </Style>

                                        </FrameworkElement.Style>
                                    </btns:GeometryToggleButton>


                                    <WrapPanel
                                        Grid.Row="1"
                                        Margin="2"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom">
                                        <FrameworkElement.Style>
                                            <Style TargetType="{x:Type WrapPanel}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=PlusButton, Path=IsChecked}" Value="False">
                                                        <Setter Property="Height" Value="0" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </FrameworkElement.Style>
                                        <btns:GeometryButton
                                            x:Name="Accept_Button"
                                            Width="32"
                                            Height="32"
                                            Margin="2"
                                            Background="{c:Green 7}"
                                            Data="{StaticResource Tick_Rounded}"
                                            Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:ChangePropertyAction
                                                        PropertyName="IsChecked"
                                                        TargetName="PlusButton"
                                                        Value="False" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </btns:GeometryButton>
                                        <btns:GeometryButton
                                            x:Name="Decline_Button"
                                            Width="32"
                                            Height="32"
                                            Margin="2"
                                            Background="{c:Red 7}"
                                            Data="{StaticResource Cancel_Rounded}"
                                            Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:ChangePropertyAction
                                                        PropertyName="IsChecked"
                                                        TargetName="PlusButton"
                                                        Value="False" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </btns:GeometryButton>
                                    </WrapPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Path=IsChecked, ElementName=PlusButton}" Value="False">
                            <Setter TargetName="content_control" Property="Height" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>