<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:anim="http://schemas.utility.com/animation"
    xmlns:btns="http://schemas.utility.com/buttons"
    xmlns:c="http://schemas.utility.com/colours"
    xmlns:conv="http://schemas.utility.com/converters"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Utility.WPF.Controls.Trees.Infrastructure"
    xmlns:math="http://hexinnovation.com/math"
    xmlns:res="http://schemas.utility.com/resourcedictionary">

    <ResourceDictionary.MergedDictionaries>
        <res:SharedResourceDictionary Source="/Utility.WPF.Geometries;component/Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <local:IntensityToColorConverter x:Key="IntensityToColorConverter" />

    <ItemsPanelTemplate x:Key="TabPanelTemplate">
        <Grid IsItemsHost="True" />
    </ItemsPanelTemplate>

    <math:MathConverter x:Key="MathConverter" />

    <Color x:Key="CloseCommandHighlightColor">#e04343</Color>

    <Style x:Key="FocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle
                        Margin="2"
                        SnapsToDevicePixels="true"
                        Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                        StrokeDashArray="1 2"
                        StrokeThickness="1" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MenuCommandButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="1" />
        <Setter Property="Opacity" Value=".8" />
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="20" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border
                        x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="true">
                        <ContentPresenter
                            x:Name="contentPresenter"
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Focusable="False"
                            RecognizesAccessKey="True"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsDefaulted" Value="true">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource Button.Disabled.Background}" />
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.Disabled.Border}" />
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="{StaticResource Button.Disabled.Foreground}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Background" Value="Blue" />
                <Setter Property="Foreground" Value="{x:Static SystemColors.HighlightTextBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter Property="Opacity" Value="1" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style
        x:Key="CloseItemCommandButtonStyle"
        BasedOn="{StaticResource MenuCommandButtonStyle}"
        TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Ellipse
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Fill="{TemplateBinding Background}" />
                        <Path
                            x:Name="Path"
                            Width="6"
                            Height="6"
                            Data="M0.5,71 L70,0.5 M0.5,1 L70,70.5"
                            SnapsToDevicePixels="True"
                            Stretch="Uniform"
                            Stroke="{TemplateBinding Foreground}"
                            StrokeEndLineCap="Square"
                            StrokeStartLineCap="Square"
                            StrokeThickness="1.5" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{x:Static SystemColors.ActiveBorderColor}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="12" />
        <Setter Property="Margin" Value="4,0,2,0" />
        <Setter Property="Foreground" Value="{x:Static SystemColors.HighlightTextBrush}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{StaticResource CloseCommandHighlightColor}" />
                    </Setter.Value>
                </Setter>
                <Setter Property="Opacity" Value="1" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <local:ShowCloseButtonConverter x:Key="ShowCloseButtonConverter" />

    <Style x:Key="TabStyle" TargetType="TreeViewItem">
        <Setter Property="local:TreeTabHelper.ParentItemCount" Value="0" />
        <Setter Property="local:TreeTabHelper.IsSelected" Value="{Binding IsExpanded, Mode=TwoWay}" />
        <Setter Property="IsExpanded" Value="{Binding IsSelected, Mode=TwoWay}" />
        <Setter Property="IsSelected" Value="{Binding IsExpanded, Mode=TwoWay}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TreeViewItem">
                    <Grid>
                        <!--  Opacity="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:TreeTabHelper.Double)}"  -->
                        <Border
                            x:Name="TabContent"
                            Margin="0,25,0,0"
                            Padding="10"
                            Background="White"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="0,6,6,6"
                            Opacity="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:TreeTabHelper.ContentOpacity)}"
                            RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleEffect" ScaleX="1" ScaleY="1" />
                            </Border.RenderTransform>
                            <ItemsPresenter x:Name="ItemsHost" />
                        </Border>
                        <!--  "  -->
                        <Border
                            x:Name="PART_Content"
                            Height="26"
                            MaxWidth="300"
                            Margin="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:TreeTabHelper.TabOffset)}"
                            Padding="10,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="Gray"
                            BorderThickness="1,1,1,0"
                            CornerRadius="6,6,0,0">
                            <!--<Border.Background>
                                <SolidColorBrush Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:TreeTabHelper.Depth), Converter={StaticResource IntensityToColorConverter}}"></SolidColorBrush>
                            </Border.Background>-->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ContentPresenter x:Name="PART_Header" ContentSource="Header" />

                                <Grid Grid.Column="1" HorizontalAlignment="Stretch" />

                                <Button
                                    Grid.Column="2"
                                    HorizontalAlignment="Right"
                                    Command="{x:Static local:TreeTabHelper.CloseItemCommand}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                    Style="{StaticResource CloseItemCommandButtonStyle}">
                                    <Button.Visibility>
                                        <Binding
                                            Converter="{StaticResource ShowCloseButtonConverter}"
                                            Path="(local:TreeTabHelper.ParentItemCount)"
                                            RelativeSource="{RelativeSource Mode=TemplatedParent}">
                                            <!--<Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type local:DragablzItem}, AncestorLevel=1}" Path="ShowDefaultCloseButton" />-->

                                            <!--<Binding RelativeSource="{RelativeSource TemplatedParent}" Path="LogicalIndex" />-->
                                        </Binding>
                                    </Button.Visibility>
                                </Button>

                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <EventTrigger RoutedEvent="PreviewMouseLeftButtonUp" SourceName="PART_Content">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--<BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsSelected">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                        </BooleanAnimationUsingKeyFrames>-->
                                    <DoubleAnimation
                                        AutoReverse="True"
                                        Storyboard.TargetName="PART_Content"
                                        Storyboard.TargetProperty="Opacity"
                                        To="0.7"
                                        Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <!--  Hover  -->
                        <Trigger Property="IsMouseOver" Value="True" />

                        <!--  Pressed (mouse down)  -->
                        <!--<Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Content" Property="Background" Value="#FFCCCCCC"/>
                            <Setter TargetName="TabContent" Property="Background" Value="#FFEAEAEA"/>
                            <Setter TargetName="ScaleEffect" Property="ScaleX" Value="0.98"/>
                            <Setter TargetName="ScaleEffect" Property="ScaleY" Value="0.98"/>
                        </Trigger>-->

                        <!--  Selected  -->
                        <Trigger Property="local:TreeTabHelper.IsSelected" Value="True">
                            <Setter TargetName="PART_Content" Property="Background" Value="#FFB0D4FF" />
                            <Setter TargetName="PART_Content" Property="BorderBrush" Value="#FF4A90E2" />
                            <!--<Setter TargetName="TabContent" Property="Background" Value="#FFE7F2FF"/>-->
                            <Setter TargetName="TabContent" Property="BorderBrush" Value="#FF4A90E2" />
                            <Setter TargetName="PART_Content" Property="TextElement.FontWeight" Value="SemiBold" />
                        </Trigger>

                        <!--  Selected + Hover  -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="local:TreeTabHelper.IsSelected" Value="False" />
                                <Condition Property="IsMouseOver" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PART_Content" Property="Background" Value="#FFE0E0E0" />
                            <Setter TargetName="TabContent" Property="Background" Value="#FFF5F5F5" />
                            <!--<Setter TargetName="PART_Content" Property="Background" Value="#FF9CCBFF"/>
                            <Setter TargetName="TabContent" Property="Background" Value="#FFDCEBFF"/>-->
                        </MultiTrigger>

                        <!--  Keyboard focus  -->
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="PART_Content" Property="BorderBrush" Value="#FF1E70C9" />
                            <!--<Setter TargetName="PART_Content" Property="BorderThickness" Value="2"/>-->
                        </Trigger>
                        <!--<Trigger Property="IsSelected" Value="True">
                        -->
                        <!--<Setter TargetName="PART_Content" Property="Background" Value="White"/>
                                <Setter TargetName="TabContent" Property="Visibility" Value="Visible"/>-->
                        <!--<Setter Property="Panel.ZIndex" Value="100000000"/>-->
                        <!--
                            </Trigger>

                            <Trigger Property="IsSelected" Value="False">
                        -->
                        <!--<Setter Property="Panel.ZIndex" Value="1"/>-->
                        <!--
                            </Trigger>-->
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <!--<Trigger Property="IsSelected" Value="False">
                <Setter Property="Opacity" Value="0" />
            </Trigger>-->
            <Trigger Property="local:TreeTabHelper.IsSelected" Value="False">

                <!--  When IsSelected becomes False  -->
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                AccelerationRatio="0.7"
                                Storyboard.TargetProperty="(local:TreeTabHelper.ContentOpacity)"
                                To="0"
                                Duration="0:0:0.4" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>

                <!--  When IsSelected becomes True  -->
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                AccelerationRatio="0.7"
                                Storyboard.TargetProperty="(local:TreeTabHelper.ContentOpacity)"
                                To="1"
                                Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>

            </Trigger>
        </Style.Triggers>
    </Style>


    <Style
        x:Key="AddItemCommandButtonStyle"
        BasedOn="{StaticResource MenuCommandButtonStyle}"
        TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid
                        MinWidth="12"
                        MinHeight="12"
                        Background="White">
                        <!--<Ellipse Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}"
                                 Fill="{TemplateBinding Background}" />-->
                        <Path
                            x:Name="Path"
                            Data="M38,6L38,70 M70,38L6,38"
                            SnapsToDevicePixels="True"
                            Stretch="UniformToFill"
                            Stroke="{TemplateBinding Foreground}"
                            StrokeEndLineCap="Square"
                            StrokeStartLineCap="Square"
                            StrokeThickness="1.5" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="Gray" />
            </Setter.Value>
        </Setter>
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="12" />
        <Setter Property="Margin" Value="4,0,2,0" />
        <Setter Property="Background" Value="{x:Static SystemColors.HighlightTextBrush}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <!--<Setter Property="Background" Value="{x:Static local:DragablzColors.WindowGlassBrush}" />-->
                <Setter Property="Foreground" Value="Blue" />
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter Property="Opacity" Value="1" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="TabControlStyle" TargetType="TreeViewItem">
        <Setter Property="ItemsPanel" Value="{StaticResource TabPanelTemplate}" />
        <Setter Property="ItemContainerStyle" Value="{StaticResource TabStyle}" />
        <Setter Property="local:TreeTabHelper.SelectedItem" Value="{Binding Current, Mode=TwoWay}" />
        <Setter Property="IsExpanded" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TreeViewItem}">
                    <Grid
                        x:Name="templateRoot"
                        ClipToBounds="true"
                        KeyboardNavigation.TabNavigation="Local"
                        SnapsToDevicePixels="true">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <ContentPresenter x:Name="PART_Header" ContentSource="Header" />
                        <Grid Grid.Row="1">


                            <Border
                                x:Name="PART_HeaderItemsControl"
                                Padding="{TemplateBinding Control.Padding}"
                                Background="{TemplateBinding Panel.Background}"
                                BorderThickness="{TemplateBinding Border.BorderThickness}"
                                SnapsToDevicePixels="True">
                                <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                    x:Name="ScrollViewer"
                                      Height="20"
                                      Template="{StaticResource TabablzScrollViewerControlTemplate}">-->
                                <ItemsPresenter x:Name="ItemsHost" SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                            </Border>




                            <!--<border verticalalignment="Top" Margin="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(local:TreeTabHelper.TotalTabOffset)}"  HorizontalAlignment="Left">
                            <Button
                                    Margin="12,6,0,0"
                                    Style="{StaticResource AddItemCommandButtonStyle}"
                                    x:Name="DefaultAddButton"
                                    Command="{x:Static local:TreeTabHelper.AddItemCommand}">
                            </Button>
                        </Border>-->

                            <Border
                                Margin="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(local:TreeTabHelper.TotalTabOffset), Converter={x:Static conv:DefaultConverter.Instance}}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <ContentPresenter
                                        x:Name="content_control"
                                        Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(local:TreeTabHelper.Edit)}"
                                        ContentTemplate="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(local:TreeTabHelper.EditTemplate)}">
                                        <FrameworkElement.Style>
                                            <Style TargetType="{x:Type ContentPresenter}">
                                                <Setter Property="Opacity" Value="0" />
                                                <Style.Triggers>
                                                    <!--<DataTrigger Binding="{Binding ElementName=PlusButton, Path=IsChecked}" Value="False">
                                         <Setter Property="Opacity" Value="0.5" />
                                         </DataTrigger>-->
                                                    <DataTrigger Binding="{Binding ElementName=PlusButton, Path=IsChecked}" Value="False">
                                                        <!--<Setter Property="Height" Value="0" />-->
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="Opacity"
                                                                        To="0"
                                                                        Duration="0:0:0.1" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </FrameworkElement.Style>
                                    </ContentPresenter>

                                    <btns:GeometryToggleButton
                                        x:Name="PlusButton"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="M0,1 H2 M1,0 V2"
                                        Foreground="Gray">
                                        <FrameworkElement.Style>
                                            <Style TargetType="{x:Type btns:GeometryToggleButton}">
                                                <Style.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter Property="Height" Value="0" />
                                                        <Setter Property="Width" Value="0" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter Property="Height" Value="16" />
                                                        <Setter Property="Width" Value="16" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </FrameworkElement.Style>
                                    </btns:GeometryToggleButton>

                                    <WrapPanel
                                        Grid.Row="1"
                                        Margin="2"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom">
                                        <FrameworkElement.Style>
                                            <Style TargetType="{x:Type WrapPanel}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=PlusButton, Path=IsChecked}" Value="False">
                                                        <Setter Property="Height" Value="0" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </FrameworkElement.Style>
                                        <btns:GeometryButton
                                            x:Name="Accept_Button"
                                            Width="12"
                                            Height="12"
                                            Margin="2"
                                            Background="{c:Green 7}"
                                            Data="{StaticResource Tick_Rounded}"
                                            Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:ChangePropertyAction
                                                        PropertyName="IsChecked"
                                                        TargetName="PlusButton"
                                                        Value="False" />

                                                    <i:InvokeCommandAction Command="{x:Static local:TreeTabHelper.AddItemCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(local:TreeTabHelper.Edit)}" />
                                                </i:EventTrigger>

                                            </i:Interaction.Triggers>
                                        </btns:GeometryButton>
                                        <btns:GeometryButton
                                            x:Name="Decline_Button"
                                            Width="12"
                                            Height="12"
                                            Margin="2"
                                            Background="{c:Red 7}"
                                            Data="{StaticResource Cancel_Rounded}"
                                            Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:ChangePropertyAction
                                                        PropertyName="IsChecked"
                                                        TargetName="PlusButton"
                                                        Value="False" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </btns:GeometryButton>
                                    </WrapPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard>
                            <anim:SetBooleanPropertyAnimation Property="(local:TreeTabHelper.IsLoaded)" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>