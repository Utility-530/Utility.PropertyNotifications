<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Utility.WPF.Controls.Trees.Infrastructure"
                    xmlns:math="http://hexinnovation.com/math"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
                    xmlns:anim="http://schemas.utility.com/animation" 
                    xmlns:btns="http://schemas.utility.com/buttons"
                    xmlns:c="http://schemas.utility.com/colours" 
                    xmlns:conv="http://schemas.utility.com/converters"
                    xmlns:res="http://schemas.utility.com/resourcedictionary">

    <ResourceDictionary.MergedDictionaries>
        <res:SharedResourceDictionary Source="/Utility.WPF.Geometries;component/Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <local:IntensityToColorConverter x:Key="IntensityToColorConverter"/>

    <ItemsPanelTemplate x:Key="TabPanelTemplate">
        <Grid IsItemsHost="True"/>
    </ItemsPanelTemplate>

    <math:MathConverter x:Key="MathConverter" />

    <Color x:Key="CloseCommandHighlightColor">#e04343</Color>

    <Style x:Key="FocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="2" SnapsToDevicePixels="true" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="MenuCommandButtonStyle">
        <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="1" />
        <Setter Property="Opacity" Value=".8" />
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="20" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                        <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsDefaulted" Value="true">
                            <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}" />
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}" />
                            <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Background" Value="Blue" />
                <Setter Property="Foreground" Value="{x:Static SystemColors.HighlightTextBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter Property="Opacity" Value="1" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="CloseItemCommandButtonStyle" BasedOn="{StaticResource MenuCommandButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Ellipse Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}"
                                 Fill="{TemplateBinding Background}" />
                        <Path x:Name="Path"
                              Data="M0.5,71 L70,0.5 M0.5,1 L70,70.5"
                              Width="6" Height="6"
                              Stretch="Uniform"
                              Stroke="{TemplateBinding Foreground}"
                              StrokeThickness="1.5"
                              StrokeStartLineCap="Square"
                              StrokeEndLineCap="Square"
                              SnapsToDevicePixels="True" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{x:Static SystemColors.ActiveBorderColor}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="12" />
        <Setter Property="Margin" Value="4 0 2 0" />
        <Setter Property="Foreground" Value="{x:Static SystemColors.HighlightTextBrush}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{StaticResource CloseCommandHighlightColor}" />
                    </Setter.Value>
                </Setter>
                <Setter Property="Opacity" Value="1" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <local:ShowCloseButtonConverter x:Key="ShowCloseButtonConverter"/>

    <Style x:Key="TabStyle" TargetType="TreeViewItem" >
        <Setter Property="local:TreeTabHelper.ParentItemCount" Value="0"></Setter>
        <Setter Property="local:TreeTabHelper.IsSelected" Value="{Binding IsExpanded, Mode=TwoWay}"/>
        <Setter Property="IsExpanded" Value="{Binding IsSelected, Mode=TwoWay}"/>
        <Setter Property="IsSelected" Value="{Binding IsExpanded, Mode=TwoWay}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TreeViewItem">
                    <Grid>
                        <!--Opacity="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:TreeTabHelper.Double)}"-->
                        <Border x:Name="TabContent"
                                    Background="White"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    CornerRadius="0,6,6,6"
                                    Margin="0,25,0,0"
                                    Padding="10"                      
                                 Opacity="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:TreeTabHelper.ContentOpacity)}"
                                    RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleEffect" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ItemsPresenter x:Name="ItemsHost"/>
                        </Border>
                        <!--"-->
                        <Border x:Name="Bd"  
                                    BorderBrush="Gray"
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="6,6,0,0"
                                    Padding="10,4"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Height="26"
                                    Margin="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:TreeTabHelper.TabOffset)}">
                            <!--<Border.Background>
                                <SolidColorBrush Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:TreeTabHelper.Depth), Converter={StaticResource IntensityToColorConverter}}"></SolidColorBrush>
                            </Border.Background>-->
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter x:Name="PART_Header" ContentSource="Header"/>

                                <Grid Grid.Column="1" HorizontalAlignment="Stretch"></Grid>

                                <Button  Grid.Column="2" 
HorizontalAlignment="Right"    
                                         Style="{StaticResource CloseItemCommandButtonStyle}"
                                         Command="{x:Static local:TreeTabHelper.CloseItemCommand}"
                                         CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                                    <Button.Visibility>
                                        <Binding  RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="(local:TreeTabHelper.ParentItemCount)" Converter="{StaticResource ShowCloseButtonConverter}">
                                            <!--<Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type local:DragablzItem}, AncestorLevel=1}" Path="ShowDefaultCloseButton" />-->

                                            <!--<Binding RelativeSource="{RelativeSource TemplatedParent}" Path="LogicalIndex" />-->
                                        </Binding>
                                    </Button.Visibility>
                                </Button>

                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <EventTrigger SourceName="Bd" RoutedEvent="PreviewMouseLeftButtonUp">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--<BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsSelected">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                        </BooleanAnimationUsingKeyFrames>-->
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.7" Storyboard.TargetName="Bd" AutoReverse="True" Duration="0:0:0.2">

                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">

                        </Trigger>

                        <!-- Pressed (mouse down) -->
                        <!--<Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#FFCCCCCC"/>
                            <Setter TargetName="TabContent" Property="Background" Value="#FFEAEAEA"/>
                            <Setter TargetName="ScaleEffect" Property="ScaleX" Value="0.98"/>
                            <Setter TargetName="ScaleEffect" Property="ScaleY" Value="0.98"/>
                        </Trigger>-->

                        <!-- Selected -->
                        <Trigger Property="local:TreeTabHelper.IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#FFB0D4FF"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#FF4A90E2"/>
                            <!--<Setter TargetName="TabContent" Property="Background" Value="#FFE7F2FF"/>-->
                            <Setter TargetName="TabContent" Property="BorderBrush" Value="#FF4A90E2"/>
                            <Setter TargetName="Bd" Property="TextElement.FontWeight" Value="SemiBold"/>
                        </Trigger>

                        <!-- Selected + Hover -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="local:TreeTabHelper.IsSelected" Value="False"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="#FFE0E0E0"/>
                            <Setter TargetName="TabContent" Property="Background" Value="#FFF5F5F5"/>
                            <!--<Setter TargetName="Bd" Property="Background" Value="#FF9CCBFF"/>
                            <Setter TargetName="TabContent" Property="Background" Value="#FFDCEBFF"/>-->
                        </MultiTrigger>

                        <!-- Keyboard focus -->
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#FF1E70C9"/>
                            <!--<Setter TargetName="Bd" Property="BorderThickness" Value="2"/>-->
                        </Trigger>
                        <!--<Trigger Property="IsSelected" Value="True">
                                -->
                        <!--<Setter TargetName="Bd" Property="Background" Value="White"/>
                                <Setter TargetName="TabContent" Property="Visibility" Value="Visible"/>-->
                        <!--<Setter Property="Panel.ZIndex" Value="100000000"/>-->
                        <!--
                            </Trigger>

                            <Trigger Property="IsSelected" Value="False">
                                -->
                        <!--<Setter Property="Panel.ZIndex" Value="1"/>-->
                        <!--
                            </Trigger>-->
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <!--<Trigger Property="IsSelected" Value="False">
                <Setter Property="Opacity" Value="0" />
            </Trigger>-->
            <Trigger Property="IsSelected" Value="False">

                <!-- When IsSelected becomes False -->
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                        Storyboard.TargetProperty="(local:TreeTabHelper.ContentOpacity)"
                        To="0"
                        Duration="0:0:0.4"
                        AccelerationRatio="0.7" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>

                <!-- When IsSelected becomes True -->
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                        Storyboard.TargetProperty="(local:TreeTabHelper.ContentOpacity)"
                        To="1"
                        Duration="0:0:0.3"
                        AccelerationRatio="0.7" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>

            </Trigger>
        </Style.Triggers>
    </Style>


    <Style TargetType="{x:Type Button}" x:Key="AddItemCommandButtonStyle" BasedOn="{StaticResource MenuCommandButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid Background="White" MinWidth="12" MinHeight="12">
                        <!--<Ellipse Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}"
                                 Fill="{TemplateBinding Background}" />-->
                        <Path x:Name="Path"
                         
                              Data="M38,6L38,70 M70,38L6,38"
            
                              Stretch="UniformToFill"
                              Stroke="{TemplateBinding Foreground}"
                              StrokeThickness="1.5"
                              StrokeStartLineCap="Square"
                              StrokeEndLineCap="Square"
                              SnapsToDevicePixels="True" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="Gray" />
            </Setter.Value>
        </Setter>
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="12" />
        <Setter Property="Margin" Value="4 0 2 0" />
        <Setter Property="Background" Value="{x:Static SystemColors.HighlightTextBrush}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <!--<Setter Property="Background" Value="{x:Static local:DragablzColors.WindowGlassBrush}" />-->
                <Setter Property="Foreground" Value="Blue" />
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter Property="Opacity" Value="1" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="TabControlStyle" TargetType="TreeViewItem">
        <Setter Property="ItemsPanel" Value="{StaticResource TabPanelTemplate}"></Setter>
        <Setter Property="ItemContainerStyle" Value="{StaticResource TabStyle}"></Setter>
        <Setter Property="local:TreeTabHelper.SelectedItem" Value="{Binding Current, Mode=TwoWay}"></Setter>
        <Setter Property="IsExpanded" Value="True"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TreeViewItem}">
                    <Grid x:Name="templateRoot" ClipToBounds="true" SnapsToDevicePixels="true" KeyboardNavigation.TabNavigation="Local">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <ContentPresenter x:Name="PART_Header" ContentSource="Header"/>
                        <Grid Grid.Row="1">


                            <Border
                                x:Name="PART_HeaderItemsControl"                          
                                BorderThickness="{TemplateBinding Border.BorderThickness}"
                                Padding="{TemplateBinding Control.Padding}"                             
                                Background="{TemplateBinding Panel.Background}"
                                SnapsToDevicePixels="True">
                                <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                    x:Name="ScrollViewer"
                                      Height="20"
                                      Template="{StaticResource TabablzScrollViewerControlTemplate}">-->
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" 
                                                   x:Name="ItemsHost"/>
                            </Border>




                            <!--<border verticalalignment="Top" Margin="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(local:TreeTabHelper.TotalTabOffset)}"  HorizontalAlignment="Left">
                            <Button 
                                    Margin="12,6,0,0"
                                    Style="{StaticResource AddItemCommandButtonStyle}"
                                    x:Name="DefaultAddButton"                                
                                    Command="{x:Static local:TreeTabHelper.AddItemCommand}">
                            </Button>
                        </Border>-->

                            <Border
                            VerticalAlignment="Top" 
                            Margin="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(local:TreeTabHelper.TotalTabOffset)}"  
                            HorizontalAlignment="Left">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <ContentPresenter x:Name="content_control" 
                                                  Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(local:TreeTabHelper.Edit)}"
                                                  ContentTemplate="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(local:TreeTabHelper.EditTemplate)}"
                                                  >
                                        <FrameworkElement.Style>
                                            <Style TargetType="{x:Type ContentPresenter}">
                                                <Setter Property="Opacity" Value="0" />
                                                <Style.Triggers>
                                                    <!--<DataTrigger Binding="{Binding ElementName=PlusButton, Path=IsChecked}" Value="False">
                                         <Setter Property="Opacity" Value="0.5" />
                                         </DataTrigger>-->
                                                    <DataTrigger Binding="{Binding ElementName=PlusButton, Path=IsChecked}" Value="False">
                                                        <!--<Setter Property="Height" Value="0" />-->
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0"
                                                     Duration="0:0:0.1" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </FrameworkElement.Style>
                                    </ContentPresenter>

                                    <btns:GeometryToggleButton
                     x:Name="PlusButton"
                                    Margin="0,0,0,0"
                     HorizontalAlignment="Center"

                     VerticalAlignment="Center"
                     Data="M0,1 H2 M1,0 V2"
                     Foreground="Gray">
                                        <FrameworkElement.Style>
                                            <Style TargetType="{x:Type btns:GeometryToggleButton}">
                                                <Style.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter Property="Height" Value="0" />
                                                        <Setter Property="Width" Value="0" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter Property="Height" Value="16" />
                                                        <Setter Property="Width" Value="16" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </FrameworkElement.Style>
                                    </btns:GeometryToggleButton>

                                    <WrapPanel
                     Grid.Row="1"
                     Margin="2"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Bottom">
                                        <FrameworkElement.Style>
                                            <Style TargetType="{x:Type WrapPanel}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=PlusButton, Path=IsChecked}" Value="False">
                                                        <Setter Property="Height" Value="0" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </FrameworkElement.Style>
                                        <btns:GeometryButton
                                        x:Name="Accept_Button"
                                        Width="12"
                                        Height="12"
                                        Margin="2"
                                        Background="{c:Green 7}"
                                        Data="{StaticResource Tick_Rounded}"
                                        Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:ChangePropertyAction
                                     PropertyName="IsChecked"
                                     TargetName="PlusButton"
                                     Value="False" />

                                                    <i:InvokeCommandAction Command="{x:Static local:TreeTabHelper.AddItemCommand}"
                                                                       CommandParameter="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(local:TreeTabHelper.Edit)}" />
                                                </i:EventTrigger>

                                            </i:Interaction.Triggers>
                                        </btns:GeometryButton>
                                        <btns:GeometryButton
                         x:Name="Decline_Button"
                         Width="12"
                         Height="12"
                         Margin="2"
                         Background="{c:Red 7}"
                         Data="{StaticResource Cancel_Rounded}"
                         Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:ChangePropertyAction
                                     PropertyName="IsChecked"
                                     TargetName="PlusButton"
                                     Value="False" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </btns:GeometryButton>
                                    </WrapPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard>
                            <anim:SetBooleanPropertyAnimation Property="(local:TreeTabHelper.IsLoaded)" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>