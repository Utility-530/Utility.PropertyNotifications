<Application x:Class="Utility.WPF.Demo.Buttons.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infra="clr-namespace:Utility.WPF.Demo.Common.ViewModels;assembly=Utility.WPF.Demo.Common">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Utility.WPF.Demo.Data;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type infra:ButtonViewModel}">
                <Ellipse Fill="Green" Height="40" Width="40"></Ellipse>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>