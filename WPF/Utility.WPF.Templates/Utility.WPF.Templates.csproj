		</Page>
	</ItemGroup>
	<ItemGroup>
		<Compile Update="Templates.cs">
			<DependentUpon>Templates.xaml</DependentUpon>
		</Compile>		
		<Compile Update="Infrastructure\MissingTemplateControl.cs">
			<DependentUpon>MissingTemplateControl.xaml</DependentUpon>
		</Compile>	
		<Compile Update="ValueTemplates.cs">
			<DependentUpon>ValueTemplates.xaml</DependentUpon>
		</Compile>
		<Compile Update="ReadOnlyValueTemplates.cs">
