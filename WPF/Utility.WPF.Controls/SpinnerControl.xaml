<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:att="http://schemas.utility.com/attached"
    xmlns:btl="clr-namespace:Utility.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:math="http://hexinnovation.com/math"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Geometry x:Key="UpGeometry">M0,3 L3,0 L6,3</Geometry>
    <Geometry x:Key="DownGeometry">M0,0 L3,3 L6,0</Geometry>

    <math:MathConverter x:Key="Math" />

    <DataTemplate x:Key="VisualStateTemplate">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)">
                                <EasingColorKeyFrame KeyTime="0" Value="LightGray" />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)">
                                <EasingColorKeyFrame KeyTime="0" Value="DarkGray" />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="Arrow" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame KeyTime="0" Value="Gray" />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </DataTemplate>

    <Style x:Key="UpStyle" TargetType="RepeatButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border
                        x:Name="Border"
                        att:VisualStateExtensions.VisualStatefromTemplate="{StaticResource VisualStateTemplate}"
                        BorderThickness="1"
                        CornerRadius="10">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStopCollection>
                                        <GradientStop Offset="0.0" Color="{DynamicResource BorderMediumColor}" />
                                        <GradientStop Offset="0.1" Color="{DynamicResource BorderDarkColor}" />
                                    </GradientStopCollection>
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStopCollection>
                                        <GradientStop Color="{DynamicResource ControlLightColor}" />
                                        <GradientStop Offset="1.0" Color="{DynamicResource ControlMediumColor}" />
                                    </GradientStopCollection>
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Border.Background>
                        <ContentPresenter
                            x:Name="ContentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DownStyle" TargetType="RepeatButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border
                        x:Name="Border"
                        att:VisualStateExtensions.VisualStatefromTemplate="{StaticResource VisualStateTemplate}"
                        BorderThickness="1"
                        CornerRadius="10">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStopCollection>
                                        <GradientStop Offset="0.0" Color="{DynamicResource BorderMediumColor}" />
                                        <GradientStop Offset="1.0" Color="{DynamicResource BorderDarkColor}" />
                                    </GradientStopCollection>
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStopCollection>
                                        <GradientStop Color="{DynamicResource ControlLightColor}" />
                                        <GradientStop Offset="1.0" Color="{DynamicResource ControlMediumColor}" />
                                    </GradientStopCollection>
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Border.Background>

                        <ContentPresenter
                            x:Name="ContentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="RepeatButtons" TargetType="{x:Type Control}">
        <UniformGrid
            x:Name="grid1"
            HorizontalAlignment="Stretch"
            Columns="1">
            <RepeatButton Command="{x:Static btl:SpinnerControl.IncreaseCommand}" Style="{StaticResource UpStyle}">
                <RepeatButton.Content>
                    <Viewbox>
                        <Path
                            x:Name="UpPath"
                            Margin="2"
                            Data="{StaticResource UpGeometry}"
                            RenderTransformOrigin="0.5,0.5"
                            Stroke="Black"
                            StrokeThickness="1.1" />
                    </Viewbox>
                </RepeatButton.Content>
                <RepeatButton.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard Storyboard.TargetName="UpPath" Storyboard.TargetProperty="StrokeThickness">
                                <DoubleAnimation To="1.3" Duration="0:0:0.1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard Storyboard.TargetName="UpPath" Storyboard.TargetProperty="StrokeThickness">
                                <DoubleAnimation To="1" Duration="0:0:0.1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard Storyboard.TargetName="UpPath" Storyboard.TargetProperty="StrokeThickness">
                                <DoubleAnimation To="1.5" Duration="0:0:0.1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </RepeatButton.Triggers>
            </RepeatButton>

            <RepeatButton Command="{x:Static btl:SpinnerControl.DecreaseCommand}" Style="{StaticResource DownStyle}">
                <RepeatButton.Content>
                    <Viewbox>
                        <Path
                            x:Name="DownPath"
                            Margin="2"
                            Data="{StaticResource DownGeometry}"
                            RenderTransformOrigin="0.5,0.5"
                            Stroke="Black"
                            StrokeThickness="1.1" />
                    </Viewbox>
                </RepeatButton.Content>

                <RepeatButton.Triggers>

                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard Storyboard.TargetName="DownPath" Storyboard.TargetProperty="StrokeThickness">
                                <DoubleAnimation To="1.3" Duration="0:0:0.1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard Storyboard.TargetName="DownPath" Storyboard.TargetProperty="StrokeThickness">
                                <DoubleAnimation To="1" Duration="0:0:0.1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard Storyboard.TargetName="DownPath" Storyboard.TargetProperty="StrokeThickness">
                                <DoubleAnimation To="1.5" Duration="0:0:0.1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </RepeatButton.Triggers>
            </RepeatButton>
        </UniformGrid>
    </ControlTemplate>

    <ControlTemplate x:Key="ReadOnly" TargetType="{x:Type btl:SpinnerControl}">
        <Grid Background="{Binding Path=Background, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}">

            <Viewbox>
                <!--<Border x:Name="SecondaryBorder" HorizontalAlignment="Stretch" BorderThickness="1"  CornerRadius="5"   RenderTransformOrigin="0.5,0.5">-->
                <TextBox
                    x:Name="PART_TextBox"
                    Width="{Binding Ratio, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource Math}, ConverterParameter=12x}"
                    Height="24"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="10"
                    IsReadOnly="True"
                    Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=FormattedValue, Mode=OneWay}"
                    TextAlignment="Center" />

                <!--</Border>-->
            </Viewbox>
            <Viewbox>
                <Control
                    Width="6"
                    Height="{Binding Ratio, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource Math}, ConverterParameter=6x}"
                    Template="{StaticResource RepeatButtons}" />
            </Viewbox>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="Writeable" TargetType="{x:Type btl:SpinnerControl}">
        <Grid Background="{Binding Path=Background, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Viewbox>
                <!--<Border x:Name="SecondaryBorder" HorizontalAlignment="Stretch" BorderThickness="1"  CornerRadius="5"   RenderTransformOrigin="0.5,0.5">-->

                <Grid Width="{Binding Ratio, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource Math}, ConverterParameter=16x}" Height="16">
                    <TextBox
                        x:Name="PART_TextBox"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="10"
                        Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=FormattedValue, Mode=OneWay}" />
                </Grid>
                <!--</Border>-->
            </Viewbox>

            <Viewbox Grid.Column="1">
                <Control
                    Width="16"
                    Height="{Binding Ratio, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource Math}, ConverterParameter=16x}"
                    Template="{StaticResource RepeatButtons}" />
            </Viewbox>
        </Grid>
    </ControlTemplate>

