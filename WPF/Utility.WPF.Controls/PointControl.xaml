<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Utility.WPF.Controls"
                    xmlns:num="clr-namespace:NumericUpDownLib;assembly=NumericUpDownLib">

    <Style TargetType="{x:Type local:PointControl}">
        <Setter Property="Height" Value="60"></Setter>
        <Setter Property="Width" Value="80"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PointControl}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Text="X" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                        <num:DoubleUpDown x:Name="x_updown" Grid.Column="1" BorderThickness="0" BorderBrush="Transparent" Value="{Binding X, RelativeSource={RelativeSource Mode=TemplatedParent}}"></num:DoubleUpDown>
                        <TextBlock Text="Y" Grid.Row="1" HorizontalAlignment="Center"  VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                        <num:DoubleUpDown x:Name="y_updown" Grid.Column="1"  BorderThickness="0" BorderBrush="Transparent" Grid.Row="1" Value="{Binding Y, RelativeSource={RelativeSource Mode=TemplatedParent}}"></num:DoubleUpDown>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>