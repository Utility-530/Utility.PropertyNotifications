<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:res="http://schemas.utility.com/resourcedictionary"
    xmlns:view="clr-namespace:Utility.WPF.Controls">

    <ResourceDictionary.MergedDictionaries>
        <res:SharedResourceDictionary Source="/Utility.WPF.Controls;component/SpinnerControl.xaml"></res:SharedResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="{x:Type view:TimeSpanControl}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type view:TimeSpanControl}">
                    <UniformGrid Rows="1">
                        <view:SpinnerControl
                            x:Name="IntervalValueSpinner"
                            Style="{StaticResource ReadOnlyStyle}"
                            StringFormat=""
                            Margin="1"
                            Maximum="1000000000000" />
                        <ComboBox x:Name="TimeIntervalUnitComboBox" Margin="1" />
                    </UniformGrid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>