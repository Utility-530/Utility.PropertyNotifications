<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:markup="http://schemas.utility.com/markup"
                    xmlns:local="clr-namespace:Utility.Nodes.WPF"
                    xmlns:btns="http://schemas.utility.com/buttons"
                    xmlns:trees="http://schemas.utility.com/trees"
                    xmlns:res="http://schemas.utility.com/resourcedictionary"
                    xmlns:conv="http://schemas.utility.com/converters"
                    xmlns:att="http://schemas.utility.com/attached"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:beh="http://schemas.utility.com/behaviors"
                    xmlns:obj="http://schemas.utility.com/objects">

    <ResourceDictionary.MergedDictionaries>
        <res:SharedResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/BasicStyle.xaml" />
        <res:SharedResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/ComboTreeViewItem.xaml" />
        <res:SharedResourceDictionary Source="/Utility.WPF.Controls.Trees;component/Themes/EditTreeViewItem.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <conv:InverseNullToBooleanConverter x:Key="InverseNullToBooleanConverter" />
    <local:ItemsPanelConverter x:Key="ItemsPanelConverter"/>
    <local:ChildrenConverter x:Key="ChildrenConverter"/>
    
    <Style x:Key="DefaultMemberStyle" TargetType="{x:Type trees:CustomTreeViewItem}" BasedOn="{StaticResource {x:Type trees:CustomTreeViewItem}}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Removed, Converter={StaticResource InverseNullToBooleanConverter}}" Value="True">
                <Setter Property="Visibility" Value="Collapsed"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type trees:CustomTreeViewItem}" x:Key="CollapsedTreeViewItem" BasedOn="{StaticResource DefaultStyle}">
        <Setter Property="IsExpanded" Value="False"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
    </Style>

    <Style TargetType="{x:Type trees:CustomTreeViewItem}" x:Key="ExpandedTreeViewItem" BasedOn="{StaticResource DefaultStyle}">
        <Setter Property="IsExpanded" Value="True"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
    </Style>

    <Style TargetType="{x:Type trees:CustomTreeViewItem}" x:Key="TableItem" BasedOn="{StaticResource DefaultStyle}">
        <Setter Property="Width"  Value="200"></Setter>
    </Style>

    <Style TargetType="{x:Type trees:CustomTreeViewItem}" x:Key="HeaderItem" BasedOn="{StaticResource DefaultStyle}">
        <Setter Property="Width"  Value="200"></Setter>
    </Style>

    <Style TargetType="{x:Type trees:CustomTreeViewItem}" x:Key="CollapsedTableItem" BasedOn="{StaticResource TableItem}">
        <Setter Property="IsExpanded" Value="False"></Setter>
    </Style>

    <Style TargetType="{x:Type trees:CustomTreeViewItem}" x:Key="ExpandedTableItem" BasedOn="{StaticResource TableItem}">
        <Setter Property="IsExpanded" Value="True"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TreeViewItem}">
                    <Border x:Name="Bd"

                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Padding="{TemplateBinding Padding}">
                        <ContentPresenter x:Name="PART_Header"
                                      Width="200"
                                      ContentSource="Header"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="LightGreen"  TargetName="Bd" />
                            <Setter Property="BorderThickness" Value="1"  TargetName="Bd" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="BorderBrush" Value="LightBlue"  TargetName="Bd" />
                            <Setter Property="BorderThickness" Value="2"  TargetName="Bd" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TableStyle"  TargetType="{x:Type trees:CustomTreeViewItem}" BasedOn="{StaticResource PlusTreeViewItem}">
        <Style.Resources>
            <DataTemplate x:Key="JsonTemplate">
                <trees:CustomTreeView ItemsSource="{Binding Converter={StaticResource ChildrenConverter}}" 
                          ItemContainerStyleSelector="{Binding ItemContainerStyleSelector, RelativeSource={RelativeSource AncestorType=trees:CustomTreeViewItem}}"
                          ItemTemplateSelector="{Binding ItemTemplateSelector, RelativeSource={RelativeSource AncestorType=trees:CustomTreeViewItem}}">                    
                </trees:CustomTreeView>
            </DataTemplate>
        </Style.Resources>
        <Setter Property="Edit" Value="{Binding Converter={StaticResource NewObjectConverter}}"></Setter>
        <Setter Property="EditTemplate" Value="{StaticResource JsonTemplate}"/>
        <att:InteractivitySetter Property="att:InteractivityItems.Template">
            <Setter.Value>
                <att:InteractivityTemplate>
                    <att:InteractivityItems>
                        <att:InteractivityItems.Triggers>
                            <local:CustomEventTrigger EventName="FinishEdit">
                                <local:AddObjectAction />
                            </local:CustomEventTrigger>
                        </att:InteractivityItems.Triggers>
                    </att:InteractivityItems>
                </att:InteractivityTemplate>
            </Setter.Value>
        </att:InteractivitySetter>
    </Style>

    <Style x:Key="ComboStyle" TargetType="{x:Type trees:CustomTreeViewItem}" BasedOn="{StaticResource ComboTreeViewItem}">
    </Style>

    <Style x:Key="RowStyle" TargetType="{x:Type trees:CustomTreeViewItem}" BasedOn="{StaticResource DefaultStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TreeViewItem}">
                    <Border x:Name="Bd"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Padding="{TemplateBinding Padding}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="12"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Rectangle HorizontalAlignment="Stretch" Fill="LightGray" Height="2" Margin="2" Grid.Column="1" Stroke="{TemplateBinding Background}" StrokeThickness="1"  VerticalAlignment="Stretch" MinWidth="40" />
                            <!-- for aiding selection of the item from its list-->
                            <Rectangle
                                       Stroke="LightGray"
                                       Fill="DarkGray"
                                       x:Name="Rectangle2"
                                       Grid.Row="1"
                                       StrokeThickness="1"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Stretch" Width="8" Height="8"  Margin="0,0" />
                            <!--<ContentPresenter x:Name="PART_Header"
                                      Grid.Column="1"
                                      ContentSource="Header"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />-->

                            <ItemsPresenter  Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Stretch" />

                            <UniformGrid Rows="1" Grid.Column="2" Grid.RowSpan="2">
                                <btns:PlusGeometryButton x:Name="PlusButton"  Width="16" Height="16"   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2" />
                                <btns:MinusGeometryButton x:Name="MinusButton"  Width="16" Height="16"    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2" />
                            </UniformGrid>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="LightGreen"  TargetName="Bd" />
                            <Setter Property="BorderThickness" Value="1"  TargetName="Bd" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="BorderBrush" Value="LightBlue"  TargetName="Bd" />
                            <Setter Property="BorderThickness" Value="2"  TargetName="Bd" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ItemsStyle" TargetType="{x:Type trees:CustomTreeViewItem}" BasedOn="{StaticResource DefaultStyle}">
        <!--<Setter Property="Width" Value="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=TreeView}}"></Setter>-->
        <Setter Property="IsExpanded" Value="true"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TreeViewItem}">
                    <Border x:Name="Bd"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Padding="{TemplateBinding Padding}">
                        <ItemsPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="LightGreen"  TargetName="Bd" />
                            <Setter Property="BorderThickness" Value="1"  TargetName="Bd" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="BorderBrush" Value="LightBlue"  TargetName="Bd" />
                            <Setter Property="BorderThickness" Value="2"  TargetName="Bd" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>