        <!--DataType="{x:Type vm:MethodDescriptor}"-->
        <DataTemplate x:Key="Method"   >
            <Button Content="{Binding Name, Mode=OneTime }" Command="{Binding Command, Mode=OneTime}"></Button>
        </DataTemplate>




    </Application.Resources>
</Application>
