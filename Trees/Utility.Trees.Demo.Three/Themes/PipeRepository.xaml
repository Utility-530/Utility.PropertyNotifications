<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Utility.Trees.Demo.MVVM">


    <!--<DataTemplate DataType="{x:Type local:RepoItem}">
        <TextBlock Text="{Binding Guid}"></TextBlock>
    </DataTemplate>-->
    
    <DataTemplate DataType="{x:Type local:PipeRepository}">
        <ListBox ItemsSource="{Binding Dictionary}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <UniformGrid Rows="1"  Width="700">
                        <ScrollViewer Width="200" HorizontalScrollBarVisibility="Visible">
                            <ContentControl Width="400" Content="{Binding Key}"/>
                        </ScrollViewer>

                        <Grid>
                            <TextBlock Text="Collection" FontWeight="UltraLight"/>
                            <TextBlock Text="{Binding Value.Collection.Count}" HorizontalAlignment="Center"/>
                        </Grid>                  
                   
                        <Grid>
                            <TextBlock Text="Values" FontWeight="UltraLight"/>
                            <TextBlock Text="{Binding Value.Count}" HorizontalAlignment="Center"/>
                        </Grid>
                    </UniformGrid>        
                </DataTemplate>       
            </ItemsControl.ItemTemplate>
        </ListBox>
    </DataTemplate>
    
</ResourceDictionary>