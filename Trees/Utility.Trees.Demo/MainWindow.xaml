        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="DateTemplate" DataType="{x:Type tree:Tree}">
            <ContentControl Content="{Binding Data}"></ContentControl>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:Persist}">
            <TextBlock Text="{Binding Name}"></TextBlock>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:Property}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <!--<RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>-->
                </Grid.RowDefinitions>

                <ToolBar>
                    <TextBlock>Type</TextBlock>
                    <view:EnumItemsControl
                            x:Name="ebdc"
                            Orientation="Horizontal"
                            Enum="{x:Type shared:ENativeType}" />
                </ToolBar>
                <WrapPanel  Grid.Row="1">
                    <TextBlock>Value</TextBlock>
                    <shared:NativeTypeEditor
                x:Name="NativeTypeEditor"
            Width="200"
            Height="30"
            Type="{Binding ElementName=ebdc, Path=Value}"
                
           />
                </WrapPanel>


            </Grid>
        </DataTemplate>

