<Window x:Class="Utility.Nodes.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utility.Nodes.Demo" 
        xmlns:infra="clr-namespace:Utility.Nodes.Demo.Infrastructure" 
        xmlns:conv="http://schemas.utility.com/converters"
        xmlns:io="clr-namespace:System.IO;assembly=mscorlib" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:st="http://schemas.spicytaco.io/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <FrameworkElement.DataContext>
        <infra:MainViewModel/>
    </FrameworkElement.DataContext>
    <FrameworkElement.Resources>

        <conv:FilenameToIconConverter x:Key="iconConverter" />


        <DataTemplate DataType="{x:Type infra:ViewModel}">
            <st:AutoGrid Columns="2*,*" Rows="1" Height="24">
                <materialDesign:PackIcon Kind="{Binding Icon}"/>
                <TextBlock Text="{Binding Name}"></TextBlock>
            </st:AutoGrid>
        </DataTemplate>

        <DataTemplate DataType="{x:Type io:FileSystemInfo}">
            <Border Height="28"
                            Padding="16 0"
                            Background="#01FFFFFF">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick"
                                          Command="{Binding Path=DataContext.SetCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                          CommandParameter="{Binding}" />
                </Border.InputBindings>
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming"
                                            Value="CharacterEllipsis" />
                            <Setter Property="Foreground"
                                            Value="#505050" />
                            <Setter Property="VerticalAlignment"
                                            Value="Center" />
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="16" />
                    </Grid.ColumnDefinitions>


                    <Image Grid.Column="0" Width="16" Height="16" Source="{Binding FullName, Converter={StaticResource iconConverter}}" />

                    <TextBlock Grid.Column="2"
                                       Text="{Binding Name}" />

                    <TextBlock Grid.Column="4"
                                       Text="{Binding Attributes}" />
                    <TextBlock Grid.Column="6"
                                       Text="{Binding LastWriteTime}" />


                </Grid>
            </Border>
        </DataTemplate>
    </FrameworkElement.Resources>
    <Grid>
        <TreeView ItemsSource="{Binding Value.Children}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                 AncestorType={x:Type TreeViewItem}}, Path=IsSelected}" 
                                                 Value="True">
                                        <Setter Property="StackPanel.Background" Value="LightBlue"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <ContentControl Content="{Binding Content}"  VerticalAlignment="Center">
                        </ContentControl>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
